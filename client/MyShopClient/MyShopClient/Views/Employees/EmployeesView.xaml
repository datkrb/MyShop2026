<Page
    x:Class="MyShopClient.Views.Employees.EmployeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Employees"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    xmlns:shared="using:MyShopClient.Views.Shared"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Table Header Style -->
        <Style x:Key="TableHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
            <Setter Property="CharacterSpacing" Value="50"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24,0,2,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <shared:PageHeader 
            Margin="-24,0,-24,2"
            Title="Employee Management" 
            Description="Manage user accounts. Create Admin or Sales staff accounts."/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,22,0">
            <StackPanel Spacing="24">
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button 
                        Click="RefreshButton_Click"
                        Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                    <Button 
                        Click="AddEmployeeButton_Click"
                        Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="18"/>
                            <TextBlock Text="Add Employee"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Stats Cards -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Employees Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="TOTAL EMPLOYEES" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalEmployees, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#E0E7FF" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE716;" FontSize="24" Foreground="#7C5CFC"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Admin Count Card -->
                    <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="ADMINISTRATORS" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.AdminCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#FEE2E2" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE7EE;" FontSize="24" Foreground="#EF4444"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Sales Count Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="SALES STAFF" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.SaleCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#D1FAE5" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE77B;" FontSize="24" Foreground="#10B981"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Employees Table Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Search -->
                        <Grid Grid.Row="0" Padding="20" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="All Employees" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            
                            <!-- Search Box -->
                            <AutoSuggestBox 
                                Grid.Column="1"
                                PlaceholderText="Search by username..."
                                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                QueryIcon="Find"
                                MinWidth="220"/>
                        </Grid>

                        <!-- Employees List -->
                        <ListView 
                            x:Name="EmployeesListView"
                            Grid.Row="1"
                            ItemsSource="{x:Bind ViewModel.Employees, Mode=OneWay}"
                            SelectionMode="None">
                            <ListView.Header>
                                <Grid Background="{ThemeResource SystemChromeLowColor}" Padding="16,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="ID" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="1" Text="USERNAME" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="2" Text="ROLE" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="CREATED" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="ACTIONS" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:EmployeeViewModel">
                                    <Grid Padding="16,12" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ID -->
                                        <TextBlock 
                                            Grid.Column="0" 
                                            Text="{x:Bind Id}" 
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource TextSecondaryBrush}"/>

                                        <!-- Username -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                                            <Border Background="#E0E7FF" CornerRadius="20" Width="40" Height="40">
                                                <FontIcon Glyph="&#xE77B;" FontSize="18" Foreground="#7C5CFC"/>
                                            </Border>
                                            <TextBlock 
                                                Text="{x:Bind Username}" 
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center"
                                                Foreground="{ThemeResource TextPrimaryBrush}"/>
                                        </StackPanel>

                                        <!-- Role Badge -->
                                        <Border 
                                            Grid.Column="2" 
                                            Background="{x:Bind RoleBadgeColor}"
                                            CornerRadius="12"
                                            Padding="12,4"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Opacity="0.2">
                                        </Border>
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Text="{x:Bind RoleDisplay}" 
                                            FontWeight="SemiBold"
                                            FontSize="12"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Created Date -->
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Text="{x:Bind FormattedCreatedDate}" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextSecondaryBrush}"/>

                                        <!-- Actions -->
                                        <StackPanel 
                                            Grid.Column="4" 
                                            Orientation="Horizontal" 
                                            Spacing="4"
                                            HorizontalAlignment="Center">
                                            <Button 
                                                Tag="{x:Bind Id}"
                                                Click="EditButton_Click"
                                                ToolTipService.ToolTip="Edit"
                                                Padding="8">
                                                <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                            </Button>
                                            <Button 
                                                Tag="{x:Bind Id}"
                                                Click="DeleteButton_Click"
                                                ToolTipService.ToolTip="Delete"
                                                Padding="8">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#EF4444"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Pagination Footer -->
                        <Border Grid.Row="2" Padding="16" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,1,0,0">
                            <shared:PaginationControl
                                x:Name="EmployeesPagination"
                                CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=OneWay}"
                                TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                                TotalItems="{x:Bind ViewModel.TotalEmployees, Mode=OneWay}"
                                PageSize="{x:Bind ViewModel.PageSize, Mode=OneWay}"
                                PageNumbers="{x:Bind ViewModel.PageNumbers, Mode=OneWay}"
                                ItemsLabel="employees"
                                PageChanged="EmployeesPagination_PageChanged"/>
                        </Border>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Grid 
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="48" Height="48"/>
                <TextBlock 
                    Text="Loading employees..." 
                    Foreground="{ThemeResource TextSecondaryBrush}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Slide Notification Component -->
        <shared:SlideNotification 
            x:Name="Notification" 
            Canvas.ZIndex="999"/>
    </Grid>
</Page>
