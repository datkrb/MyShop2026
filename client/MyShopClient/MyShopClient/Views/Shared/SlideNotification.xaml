<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyShopClient.Views.Shared.SlideNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Shared">

    <Border
        x:Name="NotificationPanel"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,24,24,0"
        Visibility="Collapsed"
        Background="{ThemeResource CardBackgroundBrush}"
        BorderBrush="{ThemeResource PrimaryBrush}"
        BorderThickness="0,0,3,0"
        CornerRadius="8"
        Padding="20,16"
        MinWidth="280"
        MaxWidth="380">
        <Border.RenderTransform>
            <TranslateTransform x:Name="NotificationTranslate" X="400"/>
        </Border.RenderTransform>
        <Border.Shadow>
            <ThemeShadow />
        </Border.Shadow>
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <FontIcon 
                    x:Name="NotificationIcon"
                    Glyph="&#xE73E;"
                    FontSize="20"
                    Foreground="{ThemeResource PrimaryBrush}"/>
                <TextBlock 
                    x:Name="TitleText"
                    Text="Thông báo"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Foreground="{ThemeResource TextPrimaryBrush}"/>
            </StackPanel>
            <TextBlock 
                x:Name="MessageText"
                Text=""
                Foreground="{ThemeResource TextSecondaryBrush}"
                FontSize="13"
                TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</UserControl>
