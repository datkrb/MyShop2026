<Page
    x:Class="MyShopClient.Views.Dashboard.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Dashboard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:models="using:MyShopClient.Models"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Grid Padding="32">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- Large: 4 columns (1 row) -->
                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Card1.(Grid.Column)" Value="0"/>
                        <Setter Target="Card1.(Grid.Row)" Value="0"/>
                        <Setter Target="Card1.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="Card2.(Grid.Column)" Value="1"/>
                        <Setter Target="Card2.(Grid.Row)" Value="0"/>
                        <Setter Target="Card2.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="Card3.(Grid.Column)" Value="2"/>
                        <Setter Target="Card3.(Grid.Row)" Value="0"/>
                        <Setter Target="Card3.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="Card4.(Grid.Column)" Value="3"/>
                        <Setter Target="Card4.(Grid.Row)" Value="0"/>
                        <Setter Target="Card4.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="10"/>

                        <!-- ContentGrid: 2x2 layout (4:2 = 2:1 ratio) -->
                        <Setter Target="SalesChart.(Grid.Column)" Value="0"/>
                        <Setter Target="SalesChart.(Grid.Row)" Value="0"/>
                        <Setter Target="SalesChart.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="TopSellingCard.(Grid.Column)" Value="4"/>
                        <Setter Target="TopSellingCard.(Grid.Row)" Value="0"/>
                        <Setter Target="TopSellingCard.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="RecentOrdersCard.(Grid.Column)" Value="0"/>
                        <Setter Target="RecentOrdersCard.(Grid.Row)" Value="1"/>
                        <Setter Target="RecentOrdersCard.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="LowStockCard.(Grid.Column)" Value="4"/>
                        <Setter Target="LowStockCard.(Grid.Row)" Value="1"/>
                        <Setter Target="LowStockCard.(Grid.ColumnSpan)" Value="2"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Medium: 2 columns, 2 rows -->
                <VisualState x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Card1.(Grid.Column)" Value="0"/>
                        <Setter Target="Card1.(Grid.Row)" Value="0"/>
                        <Setter Target="Card1.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="Card2.(Grid.Column)" Value="2"/>
                        <Setter Target="Card2.(Grid.Row)" Value="0"/>
                        <Setter Target="Card2.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="Card3.(Grid.Column)" Value="0"/>
                        <Setter Target="Card3.(Grid.Row)" Value="1"/>
                        <Setter Target="Card3.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="Card4.(Grid.Column)" Value="2"/>
                        <Setter Target="Card4.(Grid.Row)" Value="1"/>
                        <Setter Target="Card4.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="12"/>

                        <!-- ContentGrid: Stacked with bottom 2 columns (3:3 = 1:1 ratio) -->
                        <Setter Target="SalesChart.(Grid.Column)" Value="0"/>
                        <Setter Target="SalesChart.(Grid.Row)" Value="0"/>
                        <Setter Target="SalesChart.(Grid.ColumnSpan)" Value="6"/>
                        <Setter Target="RecentOrdersCard.(Grid.Column)" Value="0"/>
                        <Setter Target="RecentOrdersCard.(Grid.Row)" Value="1"/>
                        <Setter Target="RecentOrdersCard.(Grid.ColumnSpan)" Value="6"/>
                        <Setter Target="TopSellingCard.(Grid.Column)" Value="0"/>
                        <Setter Target="TopSellingCard.(Grid.Row)" Value="2"/>
                        <Setter Target="TopSellingCard.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="LowStockCard.(Grid.Column)" Value="3"/>
                        <Setter Target="LowStockCard.(Grid.Row)" Value="2"/>
                        <Setter Target="LowStockCard.(Grid.ColumnSpan)" Value="3"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Small: 1 column, 4 rows -->
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Card1.(Grid.Column)" Value="0"/>
                        <Setter Target="Card1.(Grid.Row)" Value="0"/>
                        <Setter Target="Card1.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="Card2.(Grid.Column)" Value="0"/>
                        <Setter Target="Card2.(Grid.Row)" Value="1"/>
                        <Setter Target="Card2.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="Card3.(Grid.Column)" Value="0"/>
                        <Setter Target="Card3.(Grid.Row)" Value="2"/>
                        <Setter Target="Card3.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="Card4.(Grid.Column)" Value="0"/>
                        <Setter Target="Card4.(Grid.Row)" Value="3"/>
                        <Setter Target="Card4.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="24"/>
                        <Setter Target="ContentGrid.Margin" Value="0,32,0,0"/>

                        <!-- ContentGrid: Fully stacked vertical -->
                        <Setter Target="SalesChart.(Grid.Column)" Value="0"/>
                        <Setter Target="SalesChart.(Grid.Row)" Value="0"/>
                        <Setter Target="SalesChart.(Grid.ColumnSpan)" Value="6"/>
                        <Setter Target="RecentOrdersCard.(Grid.Column)" Value="0"/>
                        <Setter Target="RecentOrdersCard.(Grid.Row)" Value="1"/>
                        <Setter Target="RecentOrdersCard.(Grid.ColumnSpan)" Value="6"/>
                        <Setter Target="TopSellingCard.(Grid.Column)" Value="0"/>
                        <Setter Target="TopSellingCard.(Grid.Row)" Value="2"/>
                        <Setter Target="TopSellingCard.(Grid.ColumnSpan)" Value="6"/>
                        <Setter Target="LowStockCard.(Grid.Column)" Value="0"/>
                        <Setter Target="LowStockCard.(Grid.Row)" Value="3"/>
                        <Setter Target="LowStockCard.(Grid.ColumnSpan)" Value="6"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Height="80" Margin="-32,-32,-32,32" Padding="32,0" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Hamburger (Mobile Only) -->
                <ColumnDefinition Width="*"/>    <!-- Welcome -->
                <ColumnDefinition Width="Auto"/> 
            </Grid.ColumnDefinitions>

            <Button x:Name="MobileMenuButton" Visibility="Collapsed" Background="Transparent" BorderThickness="0" Margin="0,0,16,0">
                <FontIcon Glyph="&#xE700;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="20" Foreground="{ThemeResource TextSecondaryBrush}"/>
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Dashboard" FontWeight="Bold" FontSize="20" Foreground="{ThemeResource TextPrimaryBrush}"/>
                <TextBlock Text="Here's what's happening with your store today." FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="24" VerticalAlignment="Center">

                <!-- Icons -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Button CornerRadius="20" Width="40" Height="40" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1" Padding="0">
                         <Grid>
                            <FontIcon Glyph="&#xE7E7;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="16"/>
                            <Ellipse Width="8" Height="8" Fill="{ThemeResource DangerBrush}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,8,8,0" Stroke="{ThemeResource CardBackgroundBrush}" StrokeThickness="2"/>
                         </Grid>
                    </Button>
                    <Button CornerRadius="20" Width="40" Height="40" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1" Padding="0">
                         <FontIcon Glyph="&#xE8BD;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="16"/>
                    </Button>
                </StackPanel>

                <!-- Profile -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Border Width="1" Background="{ThemeResource BorderBrush}" Height="40"/>
                    <PersonPicture Width="40" Height="40" DisplayName="Admin" Margin="0"/>
                    <StackPanel VerticalAlignment="Center" Visibility="Visible">
                         <TextBlock Text="Ali Husni" FontWeight="SemiBold" FontSize="14" Foreground="{ThemeResource TextPrimaryBrush}"/>
                         <TextBlock Text="Admin" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <FontIcon Glyph="&#xE70D;" FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Dashboard Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel Spacing="0">
                <!-- Stats Cards Grid -->
                <Grid ColumnSpacing="24" RowSpacing="24" x:Name="StatsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Card 1: Total Products -->
                    <Grid x:Name="Card1" Grid.Column="0" Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                         <StackPanel>
                             <Grid>
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <Border Background="{ThemeResource PrimaryBrush}" Width="4" Height="32" CornerRadius="2"/>
                                     <StackPanel>
                                         <TextBlock Text="Total Products" Foreground="{ThemeResource TextSecondaryBrush}" FontWeight="Medium" FontSize="14"/>
                                         <TextBlock Text="{x:Bind ViewModel.TotalProducts, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}" FontWeight="Bold" FontSize="24"/>
                                     </StackPanel>
                                 </StackPanel>
                                 <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="#EFF6FF" Width="40" Height="40" CornerRadius="8">
                                      <FontIcon Glyph="&#xE781;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{ThemeResource InfoBrush}"/>
                                 </Border>
                             </Grid>
                             <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,16,0,0">
                                 <FontIcon Glyph="{x:Bind ViewModel.ProductsChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeGlyphConverter}}" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{x:Bind ViewModel.ProductsChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeBrushConverter}}" FontSize="12"/>
                                 <TextBlock Text="{x:Bind ViewModel.ProductsChangeText, Mode=OneWay}" Foreground="{x:Bind ViewModel.ProductsChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeBrushConverter}}" FontWeight="SemiBold" FontSize="12"/>
                                 <TextBlock Text="Since yesterday" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="12"/>
                             </StackPanel>
                         </StackPanel>
                    </Grid>

                    <!-- Card 2: Daily Revenue -->
                    <Grid x:Name="Card2" Grid.Column="1" Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                         <StackPanel>
                             <Grid>
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <Border Background="#2DD4BF" Width="4" Height="32" CornerRadius="2"/>
                                     <StackPanel>
                                         <TextBlock Text="Daily Revenue" Foreground="{ThemeResource TextSecondaryBrush}" FontWeight="Medium" FontSize="14"/>
                                         <TextBlock Text="{x:Bind ViewModel.DailyRevenue, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}" FontWeight="Bold" FontSize="24"/>
                                     </StackPanel>
                                 </StackPanel>
                                 <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="#F0FDFA" Width="40" Height="40" CornerRadius="8">
                                      <FontIcon Glyph="&#xE8D6;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="#14B8A6"/>
                                 </Border>
                             </Grid>
                             <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,16,0,0">
                                 <FontIcon Glyph="{x:Bind ViewModel.RevenueChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeGlyphConverter}}" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{x:Bind ViewModel.RevenueChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeBrushConverter}}" FontSize="12"/>
                                 <TextBlock Text="{x:Bind ViewModel.RevenueChangeText, Mode=OneWay}" Foreground="{x:Bind ViewModel.RevenueChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeBrushConverter}}" FontWeight="SemiBold" FontSize="12"/>
                                 <TextBlock Text="Since yesterday" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="12"/>
                             </StackPanel>
                         </StackPanel>
                    </Grid>

                    <!-- Card 3: Daily Orders -->
                    <Grid x:Name="Card3" Grid.Column="2" Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                         <StackPanel>
                             <Grid>
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <Border Background="#C084FC" Width="4" Height="32" CornerRadius="2"/>
                                     <StackPanel>
                                         <TextBlock Text="Daily Orders" Foreground="{ThemeResource TextSecondaryBrush}" FontWeight="Medium" FontSize="14"/>
                                         <TextBlock Text="{x:Bind ViewModel.DailyOrders, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}" FontWeight="Bold" FontSize="24"/>
                                     </StackPanel>
                                 </StackPanel>
                                 <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FAF5FF" Width="40" Height="40" CornerRadius="8">
                                      <FontIcon Glyph="&#xE7BF;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="#A855F7"/>
                                 </Border>
                             </Grid>
                             <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,16,0,0">
                                 <FontIcon Glyph="{x:Bind ViewModel.OrdersChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeGlyphConverter}}" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="{x:Bind ViewModel.OrdersChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeBrushConverter}}" FontSize="12"/>
                                 <TextBlock Text="{x:Bind ViewModel.OrdersChangeText, Mode=OneWay}" Foreground="{x:Bind ViewModel.OrdersChangePositive, Mode=OneWay, Converter={StaticResource BoolToChangeBrushConverter}}" FontWeight="SemiBold" FontSize="12"/>
                                 <TextBlock Text="Since yesterday" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="12"/>
                             </StackPanel>
                         </StackPanel>
                    </Grid>

                    <!-- Card 4: Pending Orders -->
                    <Grid x:Name="Card4" Grid.Column="3" Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                         <StackPanel>
                             <Grid>
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <Border Background="#FB923C" Width="4" Height="32" CornerRadius="2"/>
                                     <StackPanel>
                                         <TextBlock Text="Pending Orders" Foreground="{ThemeResource TextSecondaryBrush}" FontWeight="Medium" FontSize="14"/>
                                         <TextBlock Text="{x:Bind ViewModel.PendingOrders, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}" FontWeight="Bold" FontSize="24"/>
                                     </StackPanel>
                                 </StackPanel>
                                 <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FFF7ED" Width="40" Height="40" CornerRadius="8">
                                      <FontIcon Glyph="&#xE823;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="#F97316"/>
                                 </Border>
                             </Grid>
                             <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,16,0,0">
                                 <FontIcon Glyph="&#xE7C4;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="#F97316" FontSize="12"/>
                                 <TextBlock Text="Needs attention" Foreground="#F97316" FontWeight="SemiBold" FontSize="12"/>
                             </StackPanel>
                         </StackPanel>
                    </Grid>
                </Grid>

                <!-- Content Grid: Charts, Orders, and Stock -->
                <Grid x:Name="ContentGrid" ColumnSpacing="24" RowSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Sales Chart -->
                    <Grid x:Name="SalesChart" Grid.Column="0" Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="400"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Sales Analytics" FontWeight="Bold" FontSize="18" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                <TextBlock Text="Revenue per day for current month" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                        
                        <lvc:CartesianChart Grid.Row="1" Series="{x:Bind ViewModel.RevenueSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.XAxes, Mode=OneWay}" YAxes="{x:Bind ViewModel.YAxes, Mode=OneWay}" TooltipPosition="Top" Background="{ThemeResource CardBackgroundBrush}"/>
                    </Grid>

                    <!-- Top Selling -->
                    <Grid x:Name="TopSellingCard" Grid.Column="1" Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                         <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0,0,0,24">
                            <TextBlock Text="Top 5 Best Selling" FontWeight="Bold" FontSize="18" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        </Grid>

                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.TopSelling, Mode=OneWay}" SelectionMode="None">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,16"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:Product">
                                    <Grid Padding="12" Background="{ThemeResource AppBackgroundBrush}" CornerRadius="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="4" Width="40" Height="40" Margin="0,0,12,0" Background="#E2E8F0">
                                            <Image Source="{x:Bind ImageUrl}" Stretch="UniformToFill"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="14" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{x:Bind Category}" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Margin="12,0,0,0" Text="{x:Bind Sold, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0} Sold'}" Foreground="{ThemeResource PrimaryBrush}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                     <!-- Recent Orders Table -->
                     <Grid x:Name="RecentOrdersCard" Grid.Column="0" Grid.Row="1" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0,0,0,24">
                             <TextBlock Text="Recent Orders" FontWeight="Bold" FontSize="18" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        </Grid>
                        
                        <!-- Recent Orders Table -->
                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.RecentOrders, Mode=OneWay}" SelectionMode="None">
                            <ListView.Header>
                                <Grid Padding="0,12" Background="{ThemeResource SystemChromeLowColor}" Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ID" Style="{StaticResource TableHeaderTextStyle}" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="CUSTOMER" Style="{StaticResource TableHeaderTextStyle}" TextAlignment="Left"/>
                                    <TextBlock Grid.Column="2" Text="ITEM NAME" Style="{StaticResource TableHeaderTextStyle}" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="DATE" Style="{StaticResource TableHeaderTextStyle}" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="STATUS" Style="{StaticResource TableHeaderTextStyle}" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="5" Text="PRICE" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:Order">
                                    <Grid Padding="0,12" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{x:Bind OrderId}" Foreground="{ThemeResource TextSecondaryBrush}" TextAlignment="Center" VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <PersonPicture Width="24" Height="24" ProfilePicture="{x:Bind CustomerAvatar}"/>
                                            <TextBlock Text="{x:Bind CustomerName}" FontWeight="Medium" Foreground="{ThemeResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{x:Bind ItemName}" TextAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="{x:Bind OrderDate}" TextAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Center"/>
                                        
                                        <Border Grid.Column="4" Background="#DCFCE7" CornerRadius="12" Padding="10,4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Status}" Foreground="#15803D" FontSize="12" FontWeight="SemiBold"/>
                                        </Border>

                                        <TextBlock Grid.Column="5" Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}" HorizontalAlignment="Right" FontWeight="Medium" Foreground="{ThemeResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                    <!-- Low Stock Products -->
                    <Grid x:Name="LowStockCard" Grid.Column="1" Grid.Row="1" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Margin="0,0,0,24">
                            <TextBlock Text="Top 5 Low Stock" FontWeight="Bold" FontSize="18" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <Border Background="#FEE2E2" CornerRadius="12" Padding="8,4" HorizontalAlignment="Right">
                                <TextBlock Text="Action Needed" Foreground="{ThemeResource DangerBrush}" FontSize="10" FontWeight="Bold"/>
                            </Border>
                        </Grid>

                        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.LowStock, Mode=OneWay}" SelectionMode="None">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,16"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:Product">
                                    <Grid Padding="12" Background="{ThemeResource AppBackgroundBrush}" CornerRadius="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border CornerRadius="4" Width="40" Height="40" Margin="0,0,12,0" Background="#E2E8F0">
                                            <Image Source="{x:Bind ImageUrl}" Stretch="UniformToFill"/>
                                        </Border>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" FontSize="14" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{x:Bind Category}" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Margin="12,0,0,0" Text="{x:Bind Stock, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0} left'}" Foreground="{ThemeResource DangerBrush}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
