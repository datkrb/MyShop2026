<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShopClient.Views.Reports.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Reports"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <Grid Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header & Filters -->
        <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,24">
            <TextBlock Text="Reports &amp; Analytics" Style="{StaticResource TitleTextBlockStyle}"/>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <CalendarDatePicker Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" Header="Start Date"/>
                <CalendarDatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" Header="End Date"/>
                
                <ComboBox Header="View By" SelectedItem="{x:Bind ViewModel.SelectedReportType, Mode=TwoWay}" ItemsSource="{x:Bind ViewModel.ReportTypes}" MinWidth="120"/>

                <Button Content="Load Data" Command="{x:Bind ViewModel.LoadDataCommand}" VerticalAlignment="Bottom" Style="{StaticResource AccentButtonStyle}"/>
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" VerticalAlignment="Bottom"/>
            </StackPanel>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <Grid RowSpacing="24" ColumnSpacing="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="400"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Revenue Section -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Revenue &amp; Trends" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <Grid Grid.Row="1" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                     <lvc:CartesianChart Series="{x:Bind ViewModel.RevenueSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.RevenueXAxes, Mode=OneWay}"/>
                </Grid>

                <!-- Product Sales Section -->
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Top 5 Products (Quantity)" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <Grid Grid.Row="1" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                    <lvc:CartesianChart Series="{x:Bind ViewModel.ProductSalesSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.ProductSalesXAxes, Mode=OneWay}"/>
                </Grid>

                <!-- Profit Section -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Profit vs Cost" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <Grid Grid.Row="3" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                     <lvc:PieChart Series="{x:Bind ViewModel.ProfitSeries, Mode=OneWay}" LegendPosition="Right"/>
                </Grid>

                <!-- Empty space or other metrics -->
                <!-- Could add KPI cards here nicely, but for now empty is fine or expand chart logic -->
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
