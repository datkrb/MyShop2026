<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShopClient.Views.Promotions.PromotionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MyShopClient.Models"
    xmlns:helpers="using:MyShopClient.Helpers"
    xmlns:shared="using:MyShopClient.Views.Shared"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Table Header Style -->
        <Style x:Key="TableHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
            <Setter Property="CharacterSpacing" Value="50"/>
        </Style>
        
        <!-- Status Badge Styles -->
        <Style x:Key="ActiveBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#DCFCE7"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
        <Style x:Key="InactiveBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#FEE2E2"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24,12,2,12">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,22,0">
            <StackPanel Spacing="24">
                
                <!-- Page Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title Section -->
                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock 
                            Text="Promotions" 
                            FontSize="28" 
                            FontWeight="Bold" 
                            Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <TextBlock 
                            Text="Manage discount codes and promotional campaigns." 
                            FontSize="14" 
                            Foreground="{ThemeResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Button 
                            Command="{x:Bind ViewModel.LoadPromotionsCommand}"
                            Style="{ThemeResource SecondaryButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                        <Button 
                            Command="{x:Bind ViewModel.AddCommand}"
                            Style="{ThemeResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="18"/>
                                <TextBlock Text="New Promotion"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Stats Cards -->
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Active Promotions Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="ACTIVE PROMOTIONS" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.ActivePromotionsCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#DCFCE7" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE73E;" FontSize="24" Foreground="#22C55E"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Total Promotions Card -->
                    <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="TOTAL PROMOTIONS" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalPromotionsCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#E0E7FF" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE8EC;" FontSize="24" Foreground="#7C5CFC"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Expired Promotions Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="EXPIRED" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.ExpiredPromotionsCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#FEE2E2" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE894;" FontSize="24" Foreground="#EF4444"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Promotions Table Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filters Section -->
                        <Grid Grid.Row="0" Padding="20" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Box -->
                            <AutoSuggestBox 
                                Grid.Column="0"
                                PlaceholderText="Search by code or description..."
                                Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                QueryIcon="Find"
                                MinWidth="280"/>

                            <!-- Filter Options -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" Margin="24,0,0,0">
                                <!-- Status Filter -->
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="Status:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <ComboBox 
                                        ItemsSource="{x:Bind ViewModel.StatusOptions}" 
                                        SelectedItem="{x:Bind ViewModel.SelectedStatusFilter, Mode=TwoWay}"
                                        Width="120"/>
                                </StackPanel>
                                
                                <!-- Type Filter -->
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="Type:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <ComboBox 
                                        ItemsSource="{x:Bind ViewModel.TypeOptions}" 
                                        SelectedItem="{x:Bind ViewModel.SelectedTypeFilter, Mode=TwoWay}"
                                        Width="130"/>
                                </StackPanel>
                                
                                <!-- Sort -->
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="Sort:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <ComboBox 
                                        ItemsSource="{x:Bind ViewModel.SortOptions}" 
                                        SelectedItem="{x:Bind ViewModel.SelectedSortOption, Mode=TwoWay}"
                                        Width="140"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Apply Button -->
                            <Button 
                                Grid.Column="2"
                                Content="Apply" 
                                Command="{x:Bind ViewModel.ApplyFiltersCommand}" 
                                Style="{ThemeResource AccentButtonStyle}" 
                                Padding="16,8"/>
                        </Grid>

                        <!-- Promotions List -->
                        <ScrollViewer 
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Disabled">
                            <ListView 
                                x:Name="PromotionsListView"
                                ItemsSource="{x:Bind ViewModel.FilteredPromotions, Mode=OneWay}"
                                SelectionMode="None"
                                IsItemClickEnabled="True"
                                ItemClick="PromotionsListView_ItemClick">
                                <ListView.Header>
                                    <Grid Background="{ThemeResource SystemChromeLowColor}" Padding="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*" MinWidth="140"/>
                                            <ColumnDefinition Width="2*" MinWidth="180"/>
                                            <ColumnDefinition Width="*" MinWidth="100"/>
                                            <ColumnDefinition Width="*" MinWidth="90"/>
                                            <ColumnDefinition Width="*" MinWidth="100"/>
                                            <ColumnDefinition Width="*" MinWidth="100"/>
                                            <ColumnDefinition Width="0.7*" MinWidth="60"/>
                                            <ColumnDefinition Width="0.7*" MinWidth="60"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="CODE" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="1" Text="DESCRIPTION" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="2" Text="DISCOUNT" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="3" Text="STATUS" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="4" Text="START DATE" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="5" Text="END DATE" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="6" Text="USES" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                        <TextBlock Grid.Column="7" Text="LIMIT" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                    </Grid>
                                </ListView.Header>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="MinHeight" Value="0"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:Promotion">
                                        <Grid Padding="16,12" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.5*" MinWidth="140"/>
                                                <ColumnDefinition Width="2*" MinWidth="180"/>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                                <ColumnDefinition Width="*" MinWidth="90"/>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                                <ColumnDefinition Width="*" MinWidth="100"/>
                                                <ColumnDefinition Width="0.7*" MinWidth="60"/>
                                                <ColumnDefinition Width="0.7*" MinWidth="60"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Code -->
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                                <Border 
                                                    Background="#E0E7FF" 
                                                    CornerRadius="8" 
                                                    Width="40" Height="40"
                                                    VerticalAlignment="Center">
                                                    <FontIcon Glyph="&#xE8EC;" FontSize="18" Foreground="#7C5CFC"/>
                                                </Border>
                                                <TextBlock 
                                                    Text="{x:Bind Code}" 
                                                    FontWeight="SemiBold" 
                                                    VerticalAlignment="Center"
                                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                                            </StackPanel>

                                            <!-- Description -->
                                            <TextBlock 
                                                Grid.Column="1" 
                                                Text="{x:Bind Description}" 
                                                VerticalAlignment="Center" 
                                                Foreground="{ThemeResource TextSecondaryBrush}"
                                                TextTrimming="CharacterEllipsis"
                                                MaxWidth="200"/>

                                            <!-- Discount -->
                                            <TextBlock 
                                                Grid.Column="2" 
                                                Text="{x:Bind DiscountDisplay}" 
                                                FontWeight="SemiBold"
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource TextPrimaryBrush}"/>

                                            <!-- Status Badge -->
                                            <Border 
                                                Grid.Column="3" 
                                                Background="{x:Bind StatusBackgroundColor}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Padding="10,4" 
                                                CornerRadius="12">
                                                <TextBlock 
                                                    Text="{x:Bind StatusDisplay}" 
                                                    Foreground="{x:Bind StatusForegroundColor}"
                                                    FontSize="11" 
                                                    FontWeight="SemiBold"/>
                                            </Border>

                                            <!-- Start Date -->
                                            <TextBlock 
                                                Grid.Column="4" 
                                                Text="{x:Bind StartDate, Converter={StaticResource DateTimeFormatConverter}}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource TextSecondaryBrush}"/>

                                            <!-- End Date -->
                                            <TextBlock 
                                                Grid.Column="5" 
                                                Text="{x:Bind EndDate, Converter={StaticResource DateTimeFormatConverter}}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource TextSecondaryBrush}"/>

                                            <!-- Uses -->
                                            <TextBlock 
                                                Grid.Column="6" 
                                                Text="{x:Bind UsedCount}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource TextPrimaryBrush}"/>

                                            <!-- Limit -->
                                            <TextBlock 
                                                Grid.Column="7" 
                                                Text="{x:Bind UsageLimitDisplay}" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Center"
                                                Foreground="{ThemeResource TextSecondaryBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Grid 
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="48" Height="48"/>
                <TextBlock 
                    Text="Loading promotions..." 
                    Foreground="{ThemeResource TextSecondaryBrush}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Edit Dialog Overlay (Modal) -->
        <Grid 
            Background="#80000000" 
            Visibility="{x:Bind ViewModel.IsDialogOpen, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border 
                Style="{StaticResource CardBorderStyle}"
                Width="520" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <Border Grid.Row="0" Padding="24,20" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                        <StackPanel Spacing="4">
                            <TextBlock 
                                Text="{x:Bind ViewModel.EditDialogTitle, Mode=OneWay}" 
                                FontSize="20" 
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock 
                                Text="Fill in the promotion details below"
                                FontSize="13"
                                Foreground="{ThemeResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="450" Padding="24,20">
                        <StackPanel Spacing="20">
                            <TextBox 
                                Header="Code" 
                                Text="{x:Bind ViewModel.EditingPromotion.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="e.g., SUMMER2026"/>
                            
                            <TextBox 
                                Header="Description" 
                                Text="{x:Bind ViewModel.EditingPromotion.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Describe the promotion..."
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="80"/>
                            
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                                <ComboBox 
                                    Header="Discount Type" 
                                    SelectedValue="{x:Bind ViewModel.EditingPromotion.DiscountType, Mode=TwoWay}" 
                                    SelectedValuePath="Content" 
                                    HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="PERCENTAGE"/>
                                    <ComboBoxItem Content="FIXED"/>
                                </ComboBox>
                                <NumberBox 
                                    Header="Discount Value" 
                                    Value="{Binding EditingPromotion.DiscountValue, Mode=TwoWay, Converter={StaticResource IntToDoubleConverter}}" 
                                    Grid.Column="1"
                                    PlaceholderText="0"/>
                            </Grid>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                                <NumberBox 
                                    Header="Min Order Value" 
                                    Value="{Binding EditingPromotion.MinOrderValue, Mode=TwoWay, Converter={StaticResource NullableIntToDoubleConverter}}" 
                                    HorizontalAlignment="Stretch"
                                    PlaceholderText="0"/>
                                <NumberBox 
                                    Header="Max Discount" 
                                    Value="{Binding EditingPromotion.MaxDiscount, Mode=TwoWay, Converter={StaticResource NullableIntToDoubleConverter}}" 
                                    Grid.Column="1"
                                    PlaceholderText="No limit"/>
                            </Grid>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                                <CalendarDatePicker 
                                    Header="Start Date" 
                                    Date="{Binding EditingPromotion.StartDate, Mode=TwoWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}" 
                                    HorizontalAlignment="Stretch"
                                    PlaceholderText="Select date"/>
                                <CalendarDatePicker 
                                    Header="End Date" 
                                    Date="{Binding EditingPromotion.EndDate, Mode=TwoWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}" 
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    PlaceholderText="Select date"/>
                            </Grid>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                                <NumberBox 
                                    Header="Usage Limit" 
                                    Value="{Binding EditingPromotion.UsageLimit, Mode=TwoWay, Converter={StaticResource NullableIntToDoubleConverter}}"
                                    HorizontalAlignment="Stretch"
                                    PlaceholderText="Unlimited"/>
                                <StackPanel Grid.Column="1" Spacing="8">
                                    <TextBlock Text="Status" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <ToggleSwitch 
                                        IsOn="{x:Bind ViewModel.EditingPromotion.IsActive, Mode=TwoWay}" 
                                        OnContent="Active"
                                        OffContent="Inactive"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Footer -->
                    <Border Grid.Row="2" Padding="24,16" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button 
                                Content="Delete" 
                                Command="{x:Bind ViewModel.DeleteCommand}" 
                                CommandParameter="{x:Bind ViewModel.EditingPromotion}"
                                Background="#FEE2E2"
                                Foreground="#DC2626"
                                BorderThickness="0"
                                Padding="16,8"
                                CornerRadius="8"
                                Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                                <Button 
                                    Content="Cancel" 
                                    Command="{x:Bind ViewModel.CancelEditCommand}"
                                    Style="{ThemeResource SecondaryButtonStyle}"/>
                                <Button 
                                    Content="Save Promotion" 
                                    Style="{ThemeResource AccentButtonStyle}" 
                                    Command="{x:Bind ViewModel.SaveCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
