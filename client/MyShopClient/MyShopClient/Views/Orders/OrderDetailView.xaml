<Page
    x:Class="MyShopClient.Views.Orders.OrderDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Orders"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    Background="{ThemeResource AppBackgroundBrush}">
    
    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:BoolToPaginationBrushConverter x:Key="BoolToPaginationBrushConverter"/>
    </Page.Resources>

    <Grid Padding="24,24,4,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Responsive Visual States -->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- Wide Layout: 2 columns side by side -->
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentGrid.ColumnSpacing" Value="24"/>
                        <Setter Target="OrderInfoColumn.Width" Value="*"/>
                        <Setter Target="OrderItemsColumn.Width" Value="*"/>
                        <Setter Target="OrderInfoSection.(Grid.Column)" Value="0"/>
                        <Setter Target="OrderInfoSection.(Grid.Row)" Value="0"/>
                        <Setter Target="OrderItemsSection.(Grid.Column)" Value="1"/>
                        <Setter Target="OrderItemsSection.(Grid.Row)" Value="0"/>
                    </VisualState.Setters>
                </VisualState>

                <!-- Narrow Layout: Single column, stacked -->
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentGrid.ColumnSpacing" Value="0"/>
                        <Setter Target="ContentGrid.RowSpacing" Value="24"/>
                        <Setter Target="OrderInfoColumn.Width" Value="*"/>
                        <Setter Target="OrderItemsColumn.Width" Value="0"/>
                        <Setter Target="OrderInfoSection.(Grid.Column)" Value="0"/>
                        <Setter Target="OrderInfoSection.(Grid.Row)" Value="0"/>
                        <Setter Target="OrderItemsSection.(Grid.Column)" Value="0"/>
                        <Setter Target="OrderItemsSection.(Grid.Row)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Header with Back Button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
            <Button 
                x:Name="BackButton"
                Click="BackButton_Click"
                Style="{ThemeResource AccentButtonStyle}"
                Background="{ThemeResource CardBackgroundBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                Padding="12,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16" Foreground="{ThemeResource TextPrimaryBrush}"/>
                    <TextBlock Text="Back" Foreground="{ThemeResource TextPrimaryBrush}"/>
                </StackPanel>
            </Button>
            
            <TextBlock 
                Text="Order Details" 
                FontSize="24" 
                FontWeight="Bold"
                Foreground="{ThemeResource TextPrimaryBrush}"
                VerticalAlignment="Center"/>
                
            <Border 
                Background="{x:Bind ViewModel.OrderStatusBackground, Mode=OneWay}"
                CornerRadius="8"
                Padding="12,6"
                VerticalAlignment="Center">
                <TextBlock 
                    Text="{x:Bind ViewModel.OrderStatus, Mode=OneWay}"
                    Foreground="{x:Bind ViewModel.OrderStatusForeground, Mode=OneWay}"
                    FontWeight="SemiBold"
                    FontSize="12"/>
            </Border>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,20,0">
            <Grid x:Name="ContentGrid" ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="OrderInfoColumn" Width="*"/>
                    <ColumnDefinition x:Name="OrderItemsColumn" Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Order Info Section -->
                <StackPanel x:Name="OrderInfoSection" Grid.Column="0" Grid.Row="0" Spacing="16">
                    
                    <!-- Order Information Card -->
                    <Border 
                        Background="{ThemeResource CardBackgroundBrush}" 
                        CornerRadius="16"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        Padding="24">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Order Information" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Order ID:" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="14" Width="100"/>
                                    <TextBlock Text="{x:Bind ViewModel.OrderId, Mode=OneWay}" Foreground="{ThemeResource PrimaryBrush}" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Date:" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="14" Width="100"/>
                                    <TextBlock Text="{x:Bind ViewModel.FormattedDate, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Status:" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="14" Width="100"/>
                                    <Border Background="{x:Bind ViewModel.OrderStatusBackground, Mode=OneWay}" CornerRadius="6" Padding="8,4">
                                        <TextBlock Text="{x:Bind ViewModel.OrderStatus, Mode=OneWay}" Foreground="{x:Bind ViewModel.OrderStatusForeground, Mode=OneWay}" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Customer Information Card -->
                    <Border 
                        Background="{ThemeResource CardBackgroundBrush}" 
                        CornerRadius="16"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        Padding="24">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Customer Information" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Ellipse Width="64" Height="64">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{x:Bind ViewModel.CustomerAvatar, Mode=OneWay}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{x:Bind ViewModel.CustomerName, Mode=OneWay}" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.CustomerEmail, Mode=OneWay}" FontSize="14" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Style="{ThemeResource AccentButtonStyle}" Padding="20,10" Click="EditStatusButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                <TextBlock Text="Edit Order"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="#EF4444" Padding="20,10" Click="DeleteOrderButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#EF4444"/>
                                <TextBlock Text="Delete" Foreground="#EF4444"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Order Items Section -->
                <Border 
                    x:Name="OrderItemsSection"
                    Grid.Column="1"
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundBrush}" 
                    CornerRadius="16"
                    BorderBrush="{ThemeResource BorderBrush}"
                    BorderThickness="1"
                    Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <TextBlock Grid.Row="0" Text="Order Items" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                        
                        <!-- Items List -->
                        <ListView 
                            Grid.Row="1"
                            ItemsSource="{x:Bind ViewModel.OrderItems, Mode=OneWay}"
                            SelectionMode="None">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,12"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:OrderItemViewModel">
                                    <Grid Padding="12" Background="{ThemeResource SystemChromeLowColor}" CornerRadius="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Product Image -->
                                        <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" Margin="0,0,12,0">
                                            <Ellipse Width="48" Height="48">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{x:Bind ProductImage}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Border>
                                        
                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind ProductName}" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{x:Bind FormattedUnitPrice}" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        
                                        <!-- Quantity -->
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="12,0" Foreground="{ThemeResource TextSecondaryBrush}">
                                            <Run Text="x"/>
                                            <Run Text="{x:Bind Quantity}"/>
                                        </TextBlock>
                                        
                                        <!-- Total -->
                                        <TextBlock Grid.Column="3" Text="{x:Bind FormattedTotalPrice}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <!-- Order Summary -->
                        <StackPanel Grid.Row="2" Spacing="8" Margin="0,16,0,0" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,1,0,0" Padding="0,16,0,0">
                            <Grid>
                                <TextBlock Text="Subtotal" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.FormattedSubtotal, Mode=OneWay}" HorizontalAlignment="Right" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </Grid>
                            <Grid>
                                <TextBlock Text="Tax (10%)" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.FormattedTax, Mode=OneWay}" HorizontalAlignment="Right" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </Grid>
                            <Rectangle Height="1" Fill="{ThemeResource BorderBrush}" Margin="0,8"/>
                            <Grid>
                                <TextBlock Text="Total" FontSize="16" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.FormattedTotal, Mode=OneWay}" HorizontalAlignment="Right" FontSize="16" FontWeight="Bold" Foreground="{ThemeResource PrimaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
