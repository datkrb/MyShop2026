<Page
    x:Class="MyShopClient.Views.Orders.OrderDetailView"
    x:Name="ThisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Orders"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    xmlns:shared="using:MyShopClient.Views.Shared"
    Background="{ThemeResource AppBackgroundBrush}">
    
    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <helpers:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
        <helpers:InverseStringVisibilityConverter x:Key="InverseStringVisibilityConverter"/>
        <helpers:ImageUrlConverter x:Key="ImageUrlConverter"/>
        <helpers:StringToInfoBarSeverityConverter x:Key="StringToInfoBarSeverityConverter"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <helpers:BoolToErrorBrushConverter x:Key="BoolToErrorBrushConverter"/>
    </Page.Resources>

    <Grid Padding="24,24,4,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowStates">
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1000"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ContentLayoutGrid.ColumnDefinitions[1].Width" Value="0"/>
                        <Setter Target="ContentLayoutGrid.ColumnDefinitions[0].Width" Value="*"/>
                        <Setter Target="OrderItemsPanel.(Grid.Column)" Value="0"/>
                        <Setter Target="OrderItemsPanel.(Grid.Row)" Value="1"/>
                        <Setter Target="OrderItemsPanel.Margin" Value="0,24,0,0"/>

                        <!-- Switch Buttons to Bottom of Scrollable Content -->
                        <Setter Target="ActionButtonsInline.Visibility" Value="Collapsed"/>
                        <Setter Target="ActionButtonsBottom.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>



        <!-- Header with Back Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
            <Button 
                x:Name="BackButton"
                Click="BackButton_Click"
                Style="{ThemeResource AccentButtonStyle}"
                Background="{ThemeResource CardBackgroundBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                Padding="12,8">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16" Foreground="{ThemeResource TextPrimaryBrush}"/>
                    <TextBlock Text="Back" Foreground="{ThemeResource TextPrimaryBrush}"/>
                </StackPanel>
            </Button>
            
            <TextBlock 
                Text="{x:Bind ViewModel.OrderId, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='Order #{0}'}" 
                FontSize="24" 
                FontWeight="Bold"
                Foreground="{ThemeResource TextPrimaryBrush}"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.IsNewOrder, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

            <TextBlock 
                Text="New Order" 
                FontSize="24" 
                FontWeight="Bold"
                Foreground="{ThemeResource TextPrimaryBrush}"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.IsNewOrder, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
            <Border 
                Background="{x:Bind ViewModel.StatusBackground, Mode=OneWay}"
                CornerRadius="8"
                Padding="12,6"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.IsNewOrder, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <TextBlock 
                    Text="{x:Bind ViewModel.DisplayStatus, Mode=OneWay}"
                    Foreground="{x:Bind ViewModel.StatusForeground, Mode=OneWay}"
                    FontWeight="SemiBold"
                    FontSize="12"/>
            </Border>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="0,0,20,0">
            <Grid x:Name="ContentLayoutGrid" ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Bottom Action Buttons (Narrow Mode) -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Order Info Section -->
                <StackPanel x:Name="OrderInfoPanel" Grid.Column="0" Grid.Row="0" Spacing="16">
                    
                    <!-- Order Information Card -->
                    <Border 
                        Background="{ThemeResource CardBackgroundBrush}" 
                        CornerRadius="16"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        Padding="24">
                        <StackPanel Spacing="20">
                            <TextBlock Text="Order Information" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Date:" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="14" Width="100"/>
                                    <TextBlock Text="{x:Bind ViewModel.FormattedDate, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="14" Margin="5,0,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <TextBlock Text="Status:" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="14" Width="100"/>
                                    <Border Background="{x:Bind ViewModel.StatusBackground, Mode=OneWay}" CornerRadius="6" Padding="8,4" Margin="5,0,0,0">
                                        <TextBlock Text="{x:Bind ViewModel.DisplayStatus, Mode=OneWay}" Foreground="{x:Bind ViewModel.StatusForeground, Mode=OneWay}" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>

                                <!-- Edit Mode: Status Selector -->
                                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Status:" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="14" Width="100" VerticalAlignment="Center"/>
                                    <ComboBox 
                                        ItemsSource="{x:Bind ViewModel.Statuses}"
                                        SelectedItem="{x:Bind ViewModel.SelectedStatus, Mode=TwoWay}"
                                        Width="150"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Customer Information Card -->
                    <Border 
                        Background="{ThemeResource CardBackgroundBrush}" 
                        CornerRadius="16"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        Padding="24">
                        <StackPanel Spacing="20">
                            <Grid>
                                <TextBlock Text="Customer Information" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                <Button 
                                    Content="Change" 
                                    Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Command="{x:Bind ViewModel.SelectCustomerCommand}"
                                    HorizontalAlignment="Right"
                                    Style="{ThemeResource AccentButtonStyle}"/>
                            </Grid>
                            
                            <!-- Customer Details -->
                            <StackPanel Orientation="Horizontal" Spacing="16" Visibility="{x:Bind ViewModel.CustomerName, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}">
                                <Ellipse Width="64" Height="64">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{x:Bind ViewModel.CustomerAvatar, Mode=OneWay, Converter={StaticResource ImageUrlConverter}}"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{x:Bind ViewModel.CustomerName, Mode=OneWay}" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.CustomerEmail, Mode=OneWay}" FontSize="14" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.CustomerPhone, Mode=OneWay}" FontSize="14" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{x:Bind ViewModel.CustomerAddress, Mode=OneWay}" FontSize="14" Foreground="{ThemeResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Placeholder if no customer selected in Edit Mode -->
                            <TextBlock 
                                Text="No customer selected" 
                                Foreground="{ThemeResource TextSecondaryBrush}"
                                Visibility="{x:Bind ViewModel.CustomerName, Mode=OneWay, Converter={StaticResource InverseStringVisibilityConverter}}"/>
                            
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Buttons (Inline - Wide Mode) -->
                    <StackPanel x:Name="ActionButtonsInline" Orientation="Horizontal" Spacing="12">
                        <!-- View Mode Actions -->
                        <StackPanel Orientation="Horizontal" Spacing="12" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Button Style="{ThemeResource AccentButtonStyle}" Padding="20,10" Command="{x:Bind ViewModel.EditStatusCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                    <TextBlock Text="Edit Order"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Padding="20,10" Command="{x:Bind ViewModel.PrintCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE749;" FontSize="14" Foreground="{ThemeResource PrimaryBrush}"/>
                                    <TextBlock Text="Print" Foreground="{ThemeResource PrimaryBrush}"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="#EF4444" Padding="20,10" Command="{x:Bind ViewModel.DeleteOrderCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#EF4444"/>
                                    <TextBlock Text="Delete" Foreground="#EF4444"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Edit Mode Actions -->
                        <StackPanel Orientation="Horizontal" Spacing="12" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button Style="{ThemeResource AccentButtonStyle}" Padding="20,10" Command="{x:Bind ViewModel.SaveCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                    <TextBlock Text="Save Order"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Padding="20,10" Command="{x:Bind ViewModel.CancelCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                    <TextBlock Text="Cancel"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Order Items Section -->
                <Border 
                    x:Name="OrderItemsPanel"
                    Grid.Column="1"
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundBrush}" 
                    CornerRadius="16"
                    BorderBrush="{ThemeResource BorderBrush}"
                    BorderThickness="1"
                    Padding="24">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="Order Items" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <Button 
                                HorizontalAlignment="Right" 
                                Style="{ThemeResource AccentButtonStyle}" 
                                Command="{x:Bind ViewModel.AddProductCommand}"
                                Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE710;" FontSize="12"/>
                                    <TextBlock Text="Add Product"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Items List -->
                        <ListView 
                            x:Name="OrderItemsList"
                            Grid.Row="1"
                            ItemsSource="{x:Bind ViewModel.OrderItems, Mode=OneWay}"
                            SelectionMode="None">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,12"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:OrderItemViewModel">
                                    <Grid Padding="12" Background="{ThemeResource SystemChromeLowColor}" CornerRadius="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Product Image -->
                                        <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" Margin="0,0,12,0">
                                            <Ellipse Width="48" Height="48">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding ProductImage, Converter={StaticResource ImageUrlConverter}}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Border>
                                        
                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind ProductName}" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{x:Bind FormattedUnitPrice, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{x:Bind RemainingStock, Mode=OneWay, Converter={StaticResource StringFormatConverter}, ConverterParameter='(Kho: {0})'}" 
                                                           FontSize="12" 
                                                           Foreground="{ThemeResource SystemAccentColorLight2}"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Quantity (Read Only) -->
                                        <TextBlock 
                                            Grid.Column="2" 
                                            VerticalAlignment="Center" 
                                            Margin="12,0" 
                                            Foreground="{ThemeResource TextSecondaryBrush}"
                                            Visibility="{Binding ElementName=ThisPage, Path=ViewModel.IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <Run Text="x"/>
                                            <Run Text="{x:Bind Quantity}"/>
                                        </TextBlock>

                                        <!-- Quantity (Editable) -->
                                        <NumberBox 
                                            Grid.Column="2"
                                            Value="{x:Bind Quantity, Mode=TwoWay}"
                                            Maximum="{x:Bind MaxQuantity, Mode=OneWay}"
                                            Minimum="1"
                                            SpinButtonPlacementMode="Compact"
                                            Width="90"
                                            Height="32"
                                            Margin="8,0"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding ElementName=ThisPage, Path=ViewModel.IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        
                                        <!-- Total -->
                                        <TextBlock Grid.Column="3" Text="{x:Bind FormattedTotalPrice, Mode=OneWay}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Remove Button (Edit Mode Only) -->
                                        <Button
                                            Grid.Column="4"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="8,0,0,0"
                                            Visibility="{Binding ElementName=ThisPage, Path=ViewModel.IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Command="{Binding ElementName=ThisPage, Path=ViewModel.RemoveItemCommand}"
                                            CommandParameter="{x:Bind}">
                                            <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#EF4444"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <!-- Order Summary -->
                        <StackPanel Grid.Row="2" Spacing="8" Margin="0,16,0,0" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,1,0,0" Padding="0,16,0,0">
                            
                            <!-- Discount Code Section (Edit Mode Only) -->
                            <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Mã giảm giá" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox 
                                        Grid.Column="0"
                                        PlaceholderText="Nhập mã giảm giá..."
                                        Text="{x:Bind ViewModel.PromotionCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        IsEnabled="{x:Bind ViewModel.IsPromotionApplied, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"
                                        Margin="0,0,8,0"/>
                                    
                                    <!-- Apply Button -->
                                    <Button 
                                        Grid.Column="1"
                                        Content="Áp dụng"
                                        Command="{x:Bind ViewModel.ApplyPromotionCommand}"
                                        Style="{ThemeResource AccentButtonStyle}"
                                        Visibility="{x:Bind ViewModel.IsPromotionApplied, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    
                                    <!-- Remove Button -->
                                    <Button 
                                        Grid.Column="1"
                                        Content="Xóa"
                                        Command="{x:Bind ViewModel.RemovePromotionCommand}"
                                        Background="#FEE2E2"
                                        Foreground="#EF4444"
                                        Visibility="{x:Bind ViewModel.IsPromotionApplied, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </Grid>
                                
                                <!-- Promotion Message -->
                                <TextBlock 
                                    Text="{x:Bind ViewModel.PromotionMessage, Mode=OneWay}"
                                    FontSize="12"
                                    Foreground="{x:Bind ViewModel.IsPromotionError, Mode=OneWay, Converter={StaticResource BoolToErrorBrushConverter}}"
                                    Visibility="{x:Bind ViewModel.PromotionMessage, Mode=OneWay, Converter={StaticResource StringVisibilityConverter}}"
                                    TextWrapping="Wrap"/>
                                
                                <Rectangle Height="1" Fill="{ThemeResource BorderBrush}" Margin="0,8"/>
                            </StackPanel>
                            
                            <Grid>
                                <TextBlock Text="Subtotal" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.FormattedSubtotal, Mode=OneWay}" HorizontalAlignment="Right" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </Grid>
                            
                            <!-- Discount Row (Show when there's any discount - either from API or validated in edit mode) -->
                            <Grid Visibility="{x:Bind ViewModel.HasDiscount, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Giảm giá" Foreground="#10B981"/>
                                <TextBlock HorizontalAlignment="Right" Foreground="#10B981">
                                    <Run Text="-"/>
                                    <Run Text="{x:Bind ViewModel.FormattedDisplayDiscount, Mode=OneWay}"/>
                                </TextBlock>
                            </Grid>
                            
                            <Rectangle Height="1" Fill="{ThemeResource BorderBrush}" Margin="0,8"/>
                            <Grid>
                                <TextBlock Text="Total" FontSize="16" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.FormattedTotal, Mode=OneWay}" HorizontalAlignment="Right" FontSize="16" FontWeight="Bold" Foreground="{ThemeResource PrimaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Buttons (Bottom of ScrollView - Narrow Mode) -->
                <!-- Action Buttons (Bottom of ScrollView - Narrow Mode) -->
                <StackPanel 
                    x:Name="ActionButtonsBottom"
                    Grid.Row="2" 
                    Grid.Column="0"
                    Visibility="Collapsed"
                    Margin="0,24,0,0"
                    Orientation="Vertical"
                    HorizontalAlignment="Left">
                    
                    <!-- View Mode Actions -->
                    <StackPanel Orientation="Horizontal" Spacing="12" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <Button Style="{ThemeResource AccentButtonStyle}" Padding="20,10" Command="{x:Bind ViewModel.EditStatusCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE70F;" FontSize="14"/>
                                <TextBlock Text="Edit Order"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Padding="20,10" Command="{x:Bind ViewModel.PrintCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE749;" FontSize="14" Foreground="{ThemeResource PrimaryBrush}"/>
                                <TextBlock Text="Print" Foreground="{ThemeResource PrimaryBrush}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="#EF4444" Padding="20,10" Command="{x:Bind ViewModel.DeleteOrderCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#EF4444"/>
                                <TextBlock Text="Delete" Foreground="#EF4444"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Edit Mode Actions -->
                    <StackPanel Orientation="Horizontal" Spacing="12" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Style="{ThemeResource AccentButtonStyle}" Padding="20,10" Command="{x:Bind ViewModel.SaveCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                <TextBlock Text="Save Order"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Padding="20,10" Command="{x:Bind ViewModel.CancelCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE711;" FontSize="14"/>
                                <TextBlock Text="Cancel"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Grid 
            Grid.Row="2"
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="48" Height="48"/>
                <TextBlock 
                    Text="Loading order..." 
                    Foreground="{ThemeResource TextSecondaryBrush}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>



        <!-- Slide Notification Component -->
        <shared:SlideNotification 
            x:Name="Notification" 
            Grid.RowSpan="3" 
            Canvas.ZIndex="999"/>
    </Grid>
</Page>
