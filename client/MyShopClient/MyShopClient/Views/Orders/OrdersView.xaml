<Page
    x:Class="MyShopClient.Views.Orders.OrdersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Orders"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    xmlns:shared="using:MyShopClient.Views.Shared"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:StringFormatConverter x:Key="StringFormatConverter"/>
        <helpers:BoolToPaginationBrushConverter x:Key="BoolToPaginationBrushConverter"/>
        
        <!-- Table Header Style -->
        <Style x:Key="TableHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
            <Setter Property="CharacterSpacing" Value="50"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24,0,2,12">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- Large: 3 columns, inline filters visible -->
                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard2.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard4.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard4.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard4.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="0"/>
                        <Setter Target="InlineFiltersPanel.Visibility" Value="Visible"/>
                        <Setter Target="FilterButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Medium: 3 columns, inline filters visible -->
                <VisualState x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard2.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard4.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard4.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard4.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="0"/>
                        <Setter Target="InlineFiltersPanel.Visibility" Value="Visible"/>
                        <Setter Target="FilterButton.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Small: 1 column cards, hide inline filters, show filter button -->
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard2.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="StatCard4.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard4.(Grid.Row)" Value="2"/>
                        <Setter Target="StatCard4.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="16"/>
                        <Setter Target="InlineFiltersPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="FilterButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <shared:PageHeader 
            Margin="-24,0,-24,2"
            Title="Orders Management" 
            Description="Manage your orders, track status and payments."/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,22,0">
            <StackPanel Spacing="24">
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button 
                        Click="CreateOrderButton_Click"
                        Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="18"/>
                            <TextBlock Text="Create Order"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Stats Cards -->
                <Grid x:Name="StatsGrid" ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>



                    <!-- Paid Card -->
                    <Border x:Name="StatCard2" Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="PENDING" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.PendingCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#ECFDF5" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE8FB;" FontSize="24" Foreground="#10B981"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Canceled Card -->
                    <Border x:Name="StatCard3" Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="PAID" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.PaidCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#FEE2E2" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE711;" FontSize="24" Foreground="#EF4444"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Total Orders Card -->
                    <Border x:Name="StatCard4" Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="TOTAL ORDERS" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalOrdersCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#F5F3FF" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE719;" FontSize="24" Foreground="{ThemeResource PrimaryBrush}"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Orders Table Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filters Section -->
                        <Grid Grid.Row="0" Padding="20" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Inline Filters (visible on large screens) -->
                            <StackPanel 
                                x:Name="InlineFiltersPanel"
                                Grid.Column="0"
                                Orientation="Horizontal" 
                                Spacing="16">
                                
                                <!-- From Date -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="From:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <CalendarDatePicker 
                                        Date="{x:Bind ViewModel.FromDate, Mode=TwoWay}" 
                                        PlaceholderText="Select date"/>
                                </StackPanel>

                                <!-- To Date -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="To:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <CalendarDatePicker 
                                        Date="{x:Bind ViewModel.ToDate, Mode=TwoWay}" 
                                        PlaceholderText="Select date"/>
                                </StackPanel>

                                <!-- Status Filter -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Status:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    <ComboBox 
                                        Width="140"
                                        SelectedItem="{x:Bind ViewModel.SelectedOrderStatus, Mode=TwoWay}"
                                        ItemsSource="{x:Bind ViewModel.OrderStatuses, Mode=OneWay}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Filter Button (visible on small screens) -->
                            <Button 
                                x:Name="FilterButton"
                                Grid.Column="1"
                                Visibility="Collapsed"
                                Background="{ThemeResource CardBackgroundBrush}"
                                BorderBrush="{ThemeResource BorderBrush}"
                                Padding="12,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE71C;" FontSize="16" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Filters" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                </StackPanel>
                                <Button.Flyout>
                                    <Flyout Placement="BottomEdgeAlignedRight">
                                        <StackPanel Spacing="16" MinWidth="280" Padding="8">
                                            <TextBlock Text="Filter Orders" FontWeight="SemiBold" FontSize="16" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                            
                                            <!-- From Date -->
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="From Date" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                                <CalendarDatePicker 
                                                    Date="{x:Bind ViewModel.FromDate, Mode=TwoWay}" 
                                                    PlaceholderText="Select date"
                                                    HorizontalAlignment="Stretch"/>
                                            </StackPanel>

                                            <!-- To Date -->
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="To Date" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                                <CalendarDatePicker 
                                                    Date="{x:Bind ViewModel.ToDate, Mode=TwoWay}" 
                                                    PlaceholderText="Select date"
                                                    HorizontalAlignment="Stretch"/>
                                            </StackPanel>

                                            <!-- Status Filter -->
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="Status" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                                <ComboBox 
                                                    HorizontalAlignment="Stretch"
                                                    SelectedItem="{x:Bind ViewModel.SelectedOrderStatus, Mode=TwoWay}"
                                                    ItemsSource="{x:Bind ViewModel.OrderStatuses, Mode=OneWay}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>

                        <!-- Products List with Header -->
                        <ScrollViewer 
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Disabled">
                            <ListView 
                                x:Name="OrdersListView"
                                ItemsSource="{x:Bind ViewModel.FilteredOrders, Mode=OneWay}"
                                SelectionMode="None"
                                IsItemClickEnabled="True"
                                ItemClick="OrdersListView_ItemClick">
                                <ListView.Header>
                                <Grid Background="{ThemeResource SystemChromeLowColor}" Padding="16,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="100"/>
                                        <ColumnDefinition Width="2*" MinWidth="180"/>
                                        <ColumnDefinition Width="*" MinWidth="90"/>
                                        <ColumnDefinition Width="*" MinWidth="100"/>
                                        <ColumnDefinition Width="*" MinWidth="100"/>
                                        <ColumnDefinition Width="*" MinWidth="90"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="ORDER ID" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="1" Text="CUSTOMER" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="2" Text="DATE" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="3" Text="AMOUNT" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="4" Text="STATUS" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="5" Text="CREATED BY" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:OrderViewModel">
                                    <Grid 
                                        Padding="16,12" 
                                        BorderBrush="{ThemeResource BorderBrush}" 
                                        BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" MinWidth="100"/>
                                            <ColumnDefinition Width="2*" MinWidth="180"/>
                                            <ColumnDefinition Width="*" MinWidth="90"/>
                                            <ColumnDefinition Width="*" MinWidth="100"/>
                                            <ColumnDefinition Width="*" MinWidth="100"/>
                                            <ColumnDefinition Width="*" MinWidth="90"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Order ID -->
                                        <TextBlock 
                                            Grid.Column="0" 
                                            Margin="5,0"
                                            Text="{x:Bind OrderId}" 
                                            FontWeight="SemiBold" 
                                            Foreground="{ThemeResource PrimaryBrush}" 
                                            VerticalAlignment="Center"/>

                                        <!-- Customer -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" Margin="5,0" VerticalAlignment="Center">
                                            <Border 
                                                Width="40" 
                                                Height="40" 
                                                Background="{ThemeResource SystemChromeLowColor}" 
                                                CornerRadius="20">
                                                <Ellipse Width="40" Height="40">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{x:Bind CustomerAvatar}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Border>
                                            <StackPanel VerticalAlignment="Center" Spacing="2">
                                                <TextBlock 
                                                    Text="{x:Bind CustomerName}" 
                                                    FontWeight="SemiBold" 
                                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                                                <TextBlock 
                                                    Text="{x:Bind CustomerEmail}" 
                                                    FontSize="12" 
                                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Date -->
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Margin="5,0"
                                            Text="{x:Bind FormattedDate}" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Amount -->
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Margin="5,0"
                                            Text="{x:Bind FormattedAmount}" 
                                            FontWeight="SemiBold" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Status Badge -->
                                        <Border 
                                            Grid.Column="4" 
                                            Padding="10,4" 
                                            CornerRadius="12" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Background="{x:Bind OrderStatusBackground}">
                                            <TextBlock 
                                                Text="{x:Bind OrderStatus}" 
                                                FontSize="12" 
                                                FontWeight="SemiBold" 
                                                Foreground="{x:Bind OrderStatusForeground}"/>
                                        </Border>

                                        <!-- Created By -->
                                        <TextBlock 
                                            Grid.Column="5" 
                                            Margin="5,0"
                                            Text="{x:Bind CreatedByName}" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Pagination -->
                <shared:PaginationControl
                    CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=OneWay}"
                    TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                    TotalItems="{x:Bind ViewModel.TotalOrdersCount, Mode=OneWay}"
                    PageSize="{x:Bind ViewModel.PageSize, Mode=OneWay}"
                    PageNumbers="{x:Bind ViewModel.PageNumbers, Mode=OneWay}"
                    ItemsLabel="orders"
                    PageChanged="OnPageChanged"/>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Grid 
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="48" Height="48"/>
                <TextBlock 
                    Text="Loading orders..." 
                    Foreground="{ThemeResource TextSecondaryBrush}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
