<Page
    x:Class="MyShopClient.Views.Customers.CustomersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Customers"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    xmlns:shared="using:MyShopClient.Views.Shared"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:BoolToPaginationBrushConverter x:Key="BoolToPaginationBrushConverter"/>
        
        <!-- Table Header Style -->
        <Style x:Key="TableHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
            <Setter Property="CharacterSpacing" Value="50"/>
        </Style>
    </Page.Resources>

    <Grid Padding="24,0,2,12">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- Large: 3 columns -->
                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard1.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.Column)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Medium: 3 columns -->
                <VisualState x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard1.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.Column)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Small: 1 column -->
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard1.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="StatCard2.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="2"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="3"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <shared:PageHeader 
            Margin="-24,0,-24,2"
            Title="Customer Management" 
            Description="Manage your customers, view profiles and contact information."/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,22,0">
            <StackPanel Spacing="24">
                
                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button 
                        Click="AddCustomerButton_Click"
                        Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;" FontSize="18"/>
                            <TextBlock Text="Add Customer"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Stats Cards -->
                <Grid x:Name="StatsGrid" ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Total Customers Card -->
                    <Border x:Name="StatCard1" Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="TOTAL CUSTOMERS" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalCustomers, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#E0E7FF" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE77B;" FontSize="24" Foreground="#7C5CFC"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- New This Month Card -->
                    <Border x:Name="StatCard2" Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="NEW THIS MONTH" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.NewThisMonth, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#D1FAE5" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE8FA;" FontSize="24" Foreground="#10B981"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- New This Week Card -->
                    <Border x:Name="StatCard3" Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="NEW THIS WEEK" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock 
                                    Text="{x:Bind ViewModel.NewThisWeek, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Background="#DBEAFE" 
                                CornerRadius="12" 
                                Width="48" Height="48"
                                VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE787;" FontSize="24" Foreground="#3B82F6"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Customers Table Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filters Section -->
                        <Grid Grid.Row="0" Padding="20" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Inline Filters -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                <!-- Search Box -->
                                <AutoSuggestBox 
                                    PlaceholderText="Search customers..."
                                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    QueryIcon="Find"
                                    Width="180"/>

                                <!-- Created From -->
                                <CalendarDatePicker 
                                    Date="{x:Bind ViewModel.CreatedFrom, Mode=TwoWay}" 
                                    PlaceholderText="From"/>

                                <!-- Created To -->
                                <CalendarDatePicker 
                                    Date="{x:Bind ViewModel.CreatedTo, Mode=TwoWay}" 
                                    PlaceholderText="To"/>

                                <!-- Sort -->
                                <ComboBox 
                                    Width="120"
                                    ItemsSource="{x:Bind ViewModel.SortOptions}"
                                    SelectedItem="{x:Bind ViewModel.SelectedSort, Mode=TwoWay}"/>

                                <!-- Action Buttons -->
                                <Button Content="Search" Command="{x:Bind ViewModel.RefreshCommand}" 
                                        Style="{StaticResource AccentButtonStyle}" Padding="12,6"/>
                                <Button Content="Clear" Command="{x:Bind ViewModel.ClearFiltersCommand}" 
                                        Padding="12,6"/>
                            </StackPanel>
                        </Grid>

                        <!-- Customers List -->
                        <ScrollViewer 
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Disabled">
                            <ListView 
                                x:Name="CustomersListView"
                                ItemsSource="{x:Bind ViewModel.FilteredCustomers, Mode=OneWay}"
                                SelectionMode="None"
                                IsItemClickEnabled="True"
                                ItemClick="CustomersListView_ItemClick">
                                <ListView.Header>
                                <Grid Background="{ThemeResource SystemChromeLowColor}" Padding="16,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" MinWidth="200"/>
                                        <ColumnDefinition Width="2*" MinWidth="180"/>
                                        <ColumnDefinition Width="*" MinWidth="120"/>
                                        <ColumnDefinition Width="*" MinWidth="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="CUSTOMER" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="1" Text="EMAIL" VerticalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="2" Text="PHONE" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="3" Text="CREATED" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TableHeaderTextStyle}"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:CustomerViewModel">
                                    <Grid Padding="16,12" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" MinWidth="200"/>
                                            <ColumnDefinition Width="2*" MinWidth="180"/>
                                            <ColumnDefinition Width="*" MinWidth="120"/>
                                            <ColumnDefinition Width="*" MinWidth="120"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Customer Info -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                            <Ellipse Width="40" Height="40">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{x:Bind AvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock 
                                                    Text="{x:Bind Name}" 
                                                    FontWeight="SemiBold" 
                                                  
                                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                                                <TextBlock 
                                                    Text="{x:Bind Address}" 
                                                    FontSize="12" 
                                                    Foreground="{ThemeResource TextSecondaryBrush}"
                                                    TextTrimming="CharacterEllipsis"
                                                    MaxWidth="150"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Email -->
                                        <TextBlock 
                                            Grid.Column="1" 
                                            Text="{x:Bind Email}" 
                                            VerticalAlignment="Center" 
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Phone -->
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Text="{x:Bind Phone}" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Created Date -->
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Text="{x:Bind FormattedCreatedDate}" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Pagination -->
                <shared:PaginationControl
                    CurrentPage="{x:Bind ViewModel.CurrentPage, Mode=OneWay}"
                    TotalPages="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                    TotalItems="{x:Bind ViewModel.TotalCustomers, Mode=OneWay}"
                    PageSize="{x:Bind ViewModel.PageSize, Mode=OneWay}"
                    PageNumbers="{x:Bind ViewModel.PageNumbers, Mode=OneWay}"
                    ItemsLabel="customers"
                    PageChanged="OnPageChanged"/>

            </StackPanel>
        </ScrollViewer>
        
        <!-- Loading Overlay -->
        <Grid 
            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
            Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}">
            <StackPanel 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="48" Height="48"/>
                <TextBlock 
                    Text="Loading customers..." 
                    Foreground="{ThemeResource TextSecondaryBrush}"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Slide Notification Component -->
        <shared:SlideNotification 
            x:Name="Notification" 
            Canvas.ZIndex="999"/>
    </Grid>
</Page>
