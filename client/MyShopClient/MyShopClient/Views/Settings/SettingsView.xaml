<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShopClient.Views.Settings.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:local="using:MyShopClient.Views.Settings"
    xmlns:shared="using:MyShopClient.Views.Shared"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <!-- Converters -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Page.Resources>

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <shared:PageHeader 
            Margin="-32,-32,-32,32"
            Title="Settings" 
            Description="Configure your application preferences"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Left">
                
                <!-- Pagination Settings Card -->
                <Grid Background="{ThemeResource CardBackgroundBrush}" 
                      CornerRadius="12" 
                      Padding="24" 
                      BorderBrush="{ThemeResource BorderBrush}" 
                      BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
                        <Border Background="{ThemeResource PrimaryBrush}" 
                                Width="48" Height="48" 
                                CornerRadius="12">
                            <FontIcon Glyph="&#xE8A4;" 
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                      Foreground="White" 
                                      FontSize="20"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Pagination Settings" 
                                       FontWeight="Bold" 
                                       FontSize="18" 
                                       Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Configure how many items to display per page" 
                                       FontSize="13" 
                                       Foreground="{ThemeResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Page Size Selection -->
                    <Grid Grid.Row="1" ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Rows per page" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Number of items shown per page in lists" 
                                       FontSize="12" 
                                       Foreground="{ThemeResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Page Size ComboBox -->
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{x:Bind ViewModel.PageSizeOptions}"
                                  SelectedItem="{x:Bind ViewModel.SelectedPageSize, Mode=TwoWay}"
                                  MinWidth="100"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- Navigation Settings Card -->
                <Grid Background="{ThemeResource CardBackgroundBrush}" 
                      CornerRadius="12" 
                      Padding="24" 
                      BorderBrush="{ThemeResource BorderBrush}" 
                      BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
                        <Border Background="#2DD4BF" 
                                Width="48" Height="48" 
                                CornerRadius="12">
                            <FontIcon Glyph="&#xE8B0;" 
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                      Foreground="White" 
                                      FontSize="20"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Navigation Settings" 
                                       FontWeight="Bold" 
                                       FontSize="18" 
                                       Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Configure startup and navigation behavior" 
                                       FontSize="13" 
                                       Foreground="{ThemeResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Remember Last Screen Toggle -->
                    <Grid Grid.Row="1" Margin="0,0,0,20" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Remember last screen" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Open the last visited screen when logging in" 
                                       FontSize="12" 
                                       Foreground="{ThemeResource TextSecondaryBrush}" 
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <ToggleSwitch Grid.Column="1" 
                                      MinWidth="0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      IsOn="{x:Bind ViewModel.RememberLastScreen, Mode=TwoWay}"/>
                    </Grid>

                    <!-- Current Last Screen Info -->
                    <Border Grid.Row="2" 
                            Background="{ThemeResource AppBackgroundBrush}" 
                            CornerRadius="8" 
                            Padding="16"
                            Visibility="{x:Bind ViewModel.RememberLastScreen, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="{ThemeResource PrimaryBrush}" 
                                    Width="40" Height="40" 
                                    CornerRadius="8" 
                                    Margin="0,0,16,0"
                                    Opacity="0.15">
                                <FontIcon Glyph="&#xE81C;" 
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                          Foreground="{ThemeResource PrimaryBrush}" 
                                          FontSize="16"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Last visited screen" 
                                           FontSize="12" 
                                           Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock Text="{x:Bind ViewModel.CurrentLastScreen, Mode=OneWay}" 
                                           FontWeight="SemiBold" 
                                           FontSize="14" 
                                           Foreground="{ThemeResource PrimaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Default Screen Card (when Remember is OFF) -->
                <Grid Background="{ThemeResource CardBackgroundBrush}" 
                      CornerRadius="12" 
                      Padding="24" 
                      BorderBrush="{ThemeResource BorderBrush}" 
                      BorderThickness="1"
                      Visibility="{x:Bind ViewModel.RememberLastScreen, Mode=OneWay, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
                        <Border Background="#C084FC" 
                                Width="48" Height="48" 
                                CornerRadius="12">
                            <FontIcon Glyph="&#xE80F;" 
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                      Foreground="White" 
                                      FontSize="20"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Default Start Screen" 
                                       FontWeight="Bold" 
                                       FontSize="18" 
                                       Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Choose which screen to open after login" 
                                       FontSize="13" 
                                       Foreground="{ThemeResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Screen Selection Grid -->
                    <GridView Grid.Row="1" 
                              ItemsSource="{x:Bind ViewModel.AvailableScreens}"
                              SelectedItem="{x:Bind ViewModel.SelectedDefaultScreen, Mode=TwoWay}"
                              SelectionMode="Single">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:ScreenOption">
                                <Grid Width="110" Height="80" 
                                      Padding="12"
                                      Background="{ThemeResource AppBackgroundBrush}"
                                      CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"
                                                Spacing="8">
                                        <FontIcon Glyph="{x:Bind Icon}" 
                                                  FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                                  Foreground="{ThemeResource TextSecondaryBrush}" 
                                                  FontSize="24"/>
                                        <TextBlock Text="{x:Bind DisplayName}" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{ThemeResource TextPrimaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <!-- Change Password Card -->
                <Grid Background="{ThemeResource CardBackgroundBrush}" 
                      CornerRadius="12" 
                      Padding="24" 
                      BorderBrush="{ThemeResource BorderBrush}" 
                      BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,0,0,24">
                        <Border Background="#F97316" 
                                Width="48" Height="48" 
                                CornerRadius="12">
                            <FontIcon Glyph="&#xE8D7;" 
                                      FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                      Foreground="White" 
                                      FontSize="20"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Change Password" 
                                       FontWeight="Bold" 
                                       FontSize="18" 
                                       Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Update your account password" 
                                       FontSize="13" 
                                       Foreground="{ThemeResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Password Form -->
                    <StackPanel Grid.Row="1" Spacing="16" MaxWidth="400" HorizontalAlignment="Left">
                        <!-- Current Password -->
                        <PasswordBox 
                            Header="Current Password"
                            Password="{x:Bind ViewModel.CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Enter your current password"/>

                        <!-- New Password -->
                        <PasswordBox 
                            Header="New Password"
                            Password="{x:Bind ViewModel.NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Enter new password (min 6 characters)"/>

                        <!-- Confirm New Password -->
                        <PasswordBox 
                            Header="Confirm New Password"
                            Password="{x:Bind ViewModel.ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Confirm your new password"/>

                        <!-- Error Message -->
                        <TextBlock 
                            Text="{x:Bind ViewModel.PasswordErrorMessage, Mode=OneWay}"
                            Foreground="#EF4444"
                            FontSize="13"
                            Visibility="{x:Bind ViewModel.PasswordErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Success Message -->
                        <TextBlock 
                            Text="{x:Bind ViewModel.PasswordSuccessMessage, Mode=OneWay}"
                            Foreground="#10B981"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Visibility="{x:Bind ViewModel.PasswordSuccessMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Submit Button -->
                        <Button 
                            Content="Change Password"
                            Command="{x:Bind ViewModel.ChangePasswordCommand}"
                            Style="{ThemeResource AccentButtonStyle}"
                            HorizontalAlignment="Left"
                            Padding="24,10"
                            IsEnabled="{x:Bind ViewModel.IsChangingPassword, Mode=OneWay, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
