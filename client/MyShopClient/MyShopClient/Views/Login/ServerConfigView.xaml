<Page
    x:Class="MyShopClient.Views.Login.ServerConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Login"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Colors based on Tailwind config -->
        <Color x:Key="PrimaryColor">#8b5cf6</Color>
        <Color x:Key="PrimaryHoverColor">#7c3aed</Color>
        <Color x:Key="SuccessColor">#22c55e</Color>
        <Color x:Key="ErrorColor">#ef4444</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>

        <!-- Converter for status color -->
        <local:BoolToColorConverter x:Key="BoolToColorConverter" 
                                     TrueColor="#22c55e" 
                                     FalseColor="#ef4444"/>
        
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>

        <!-- Primary Button Style -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation 
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#7c3aed" 
                                                Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation 
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#6d28d9" 
                                                Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.5" 
                                                Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter 
                                Content="{TemplateBinding Content}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style TargetType="Button" x:Key="SecondaryButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftPanel.Visibility" Value="Visible"/>
                        <Setter Target="ContentColumn.Width" Value="*"/>
                        <Setter Target="LeftColumn.Width" Value="*"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="LeftColumn.Width" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid x:Name="MainGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" x:Name="LeftColumn"/>
                <ColumnDefinition Width="*" x:Name="ContentColumn"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel (Decorative) -->
            <Grid x:Name="LeftPanel" Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD8A8" Offset="0.0"/>
                        <GradientStop Color="#D8B4FE" Offset="0.5"/>
                        <GradientStop Color="#8B5CF6" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <!-- Decorative Blobs -->
                <Ellipse Width="500" Height="500" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-250,-250,0" Opacity="0.6">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="#A78BFA"/>
                    </Ellipse.Fill>
                </Ellipse>
                
                <Ellipse Width="500" Height="500" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-150,0,0,-150" Opacity="0.6">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="#8B5CF6"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Content -->
                <StackPanel VerticalAlignment="Center" Margin="48" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Border Background="#33FFFFFF" CornerRadius="8" Width="32" Height="32">
                             <FontIcon Glyph="&#xE9D2;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="White" FontSize="18"/>
                        </Border>
                        <TextBlock Text="Deskboard" Foreground="White" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Text="Server Configuration" Foreground="White" FontSize="42" FontWeight="Bold" LineHeight="50" TextWrapping="Wrap"/>
                    <TextBlock Text="Configure your server connection settings to connect to your backend API." Foreground="#CCFFFFFF" FontSize="16" FontWeight="Light" TextWrapping="Wrap" MaxWidth="300" HorizontalAlignment="Left"/>
                </StackPanel>
                
                 <!-- Bottom Curve (Path) -->
                 <Path Data="M0 100 C 20 0 50 0 100 100 Z" Stretch="Fill" VerticalAlignment="Bottom" Height="100" Opacity="0.4">
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                             <GradientStop Color="#8B5CF6" Offset="0"/>
                             <GradientStop Color="#FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Path.Fill>
                 </Path>
            </Grid>

            <!-- Right Panel (Config Form) -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <Grid Padding="64" VerticalAlignment="Center" MinHeight="500">
                    <StackPanel Spacing="32" MaxWidth="448" VerticalAlignment="Center">
                        
                        <!-- Header -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Server Configuration" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text="Configure the server URL for API connections." Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>

                        <StackPanel Spacing="20">
                            <!-- Server URL -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Server URL" FontWeight="Medium" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBox PlaceholderText="http://localhost" 
                                         Text="{x:Bind ViewModel.ServerUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="12" 
                                         CornerRadius="12"/>
                            </StackPanel>

                            <!-- Server Port -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Server Port" FontWeight="Medium" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <NumberBox PlaceholderText="8888" 
                                           Value="{x:Bind ViewModel.ServerPort, Mode=TwoWay}" 
                                           Minimum="1"
                                           Maximum="65535"
                                           SpinButtonPlacementMode="Compact"
                                           Padding="12"
                                           CornerRadius="12"/>
                            </StackPanel>

                            <!-- Full URL Preview -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Full API URL" FontWeight="Medium" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <Border Background="{ThemeResource SystemControlBackgroundListLowBrush}" CornerRadius="8" Padding="12">
                                    <TextBlock Text="{x:Bind ViewModel.FullServerUrl, Mode=OneWay}" 
                                               FontFamily="Consolas" 
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </StackPanel>

                            <!-- Status Message -->
                            <TextBlock 
                                Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                Foreground="{x:Bind ViewModel.IsStatusSuccess, Mode=OneWay, Converter={StaticResource BoolToColorConverter}}"
                                FontSize="14"
                                FontWeight="Medium"
                                TextWrapping="Wrap"
                                Visibility="{x:Bind ViewModel.StatusMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

                            <!-- Testing Connection Indicator -->
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Visibility="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay}">
                                <ProgressRing IsActive="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay}" Width="20" Height="20"/>
                                <TextBlock Text="Testing connection..." Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Spacing="12">
                            <!-- Test Connection Button -->
                            <Button Content="Test Connection" 
                                    Command="{x:Bind ViewModel.TestConnectionCommand}"
                                    IsEnabled="{x:Bind ViewModel.IsTestingConnection, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    HorizontalAlignment="Stretch"/>

                            <!-- Save Button -->
                            <Button Content="Save Configuration" 
                                    Command="{x:Bind ViewModel.SaveCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"/>

                            <!-- Clear URL -->
                            <HyperlinkButton Content="Clear URL" 
                                             Command="{x:Bind ViewModel.ClearUrlCommand}"
                                             HorizontalAlignment="Center"
                                             Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>

                        <!-- Back to Login -->
                        <Button Content="â† Back to Login" 
                                Click="BackToLogin_Click"
                                Background="Transparent"
                                Foreground="{StaticResource PrimaryBrush}"
                                FontWeight="Medium"
                                HorizontalAlignment="Center"
                                Padding="16,8"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
