<Page
    x:Class="MyShopClient.Views.Login.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Login"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Colors based on Tailwind config -->
        <Color x:Key="PrimaryColor">#8b5cf6</Color>
        <Color x:Key="PrimaryHoverColor">#7c3aed</Color>
        <Color x:Key="TextLightColor">#1f2937</Color>
        <Color x:Key="MutedLightColor">#9ca3af</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
        
        <!-- String to Bool Converter -->
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>
        <local:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Login Button Style with nice hover -->
        <Style TargetType="Button" x:Key="LoginButtonStyle">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation 
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#7c3aed" 
                                                Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation 
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#6d28d9" 
                                                Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation 
                                                Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.5" 
                                                Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter 
                                Content="{TemplateBinding Content}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftPanel.Visibility" Value="Visible"/>
                        <Setter Target="ContentColumn.Width" Value="*"/>
                        <Setter Target="LeftColumn.Width" Value="*"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="LeftColumn.Width" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid x:Name="MainGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" x:Name="LeftColumn"/>
                <ColumnDefinition Width="*" x:Name="ContentColumn"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel (Illustration) -->
            <Grid x:Name="LeftPanel" Grid.Column="0">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD8A8" Offset="0.0"/>
                        <GradientStop Color="#D8B4FE" Offset="0.5"/>
                        <GradientStop Color="#8B5CF6" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <!-- Decorative Blobs (Simulated with Ellipses) -->
                <Ellipse Width="500" Height="500" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-250,-250,0" Opacity="0.6">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="#A78BFA"/>
                    </Ellipse.Fill>
                    <!-- Blur effect would require Win2D or Composition, kept simple for pure XAML -->
                </Ellipse>
                
                <Ellipse Width="500" Height="500" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-150,0,0,-150" Opacity="0.6">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="#8B5CF6"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Content -->
                <StackPanel VerticalAlignment="Center" Margin="48" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Border Background="#33FFFFFF" CornerRadius="8" Width="32" Height="32">
                             <FontIcon Glyph="&#xE9D2;" FontFamily="{ThemeResource SymbolThemeFontFamily}" Foreground="White" FontSize="18"/>
                        </Border>
                        <TextBlock Text="Deskboard" Foreground="White" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Text="Welcome Back!" Foreground="White" FontSize="48" FontWeight="Bold" LineHeight="56" TextWrapping="Wrap"/>
                    <TextBlock Text="Streamline your sales management and track your growth with ease." Foreground="#CCFFFFFF" FontSize="16" FontWeight="Light" TextWrapping="Wrap" MaxWidth="300" HorizontalAlignment="Left"/>
                </StackPanel>
                
                 <!-- Bottom Curve (Path) -->
                 <Path Data="M0 100 C 20 0 50 0 100 100 Z" Stretch="Fill" VerticalAlignment="Bottom" Height="100" Opacity="0.4">
                    <Path.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                             <GradientStop Color="#8B5CF6" Offset="0"/>
                             <GradientStop Color="#FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Path.Fill>
                 </Path>
            </Grid>

            <!-- Right Panel (Login Form) with ScrollViewer -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <Grid Padding="64" VerticalAlignment="Center" MinHeight="600">
                    <StackPanel Spacing="32" MaxWidth="448" VerticalAlignment="Center">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Login" FontSize="30" FontWeight="Bold"/>
                            <TextBlock Text="Welcome back! Please login to your account." Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>

                        <StackPanel Spacing="20">
                            <!-- Username -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="User Name" FontWeight="Medium" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBox PlaceholderText="Enter your username" Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="12" CornerRadius="12" />
                            </StackPanel>

                            <!-- Password -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Password" FontWeight="Medium" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                <PasswordBox PlaceholderText="Enter your password" Password="{x:Bind ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="12" CornerRadius="12"/>
                            </StackPanel>

                            <!-- Remember Me & Forgot PW -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Content="Remember Me" IsChecked="{x:Bind ViewModel.RememberMe, Mode=TwoWay}"/>
                                <HyperlinkButton Grid.Column="1" Content="Forgot Password?" Command="{x:Bind ViewModel.ForgotPasswordCommand}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Spacing="10">
                            <!-- Error Message -->
                            <TextBlock 
                                Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                                Foreground="#ef4444"
                                FontSize="14"
                                TextWrapping="Wrap"
                                Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>
                            
                            <!-- Login Button with inline loading spinner -->
                            <Button Command="{x:Bind ViewModel.LoginCommand}" 
                                    IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InvertBoolConverter}}"
                                    Style="{StaticResource LoginButtonStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                                                  Width="16" Height="16"
                                                  Foreground="White"
                                                  Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"/>
                                    <TextBlock Text="Login" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Server Config Button -->
                        <HyperlinkButton Content="âš™ Server Configuration" 
                                         Click="ConfigButton_Click"
                                         HorizontalAlignment="Center"
                                         Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                         FontSize="13"/>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
