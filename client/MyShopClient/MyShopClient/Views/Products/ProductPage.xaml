<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShopClient.Views.Products.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MyShopClient.Models"
    xmlns:vm="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:DoubleToNullableDoubleConverter x:Key="DoubleToNullableDoubleConverter"/>
        <helpers:IntToDoubleConverter x:Key="IntToDoubleConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid" Padding="24" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Filters -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24" Spacing="16">
            <TextBlock Text="Product Management" Style="{ThemeResource TitleTextBlockStyle}"/>
            
            <CommandBar DefaultLabelPosition="Right" Background="Transparent" Padding="0">
                <CommandBar.PrimaryCommands>
                    <AppBarElementContainer>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <!-- Search -->
                            <AutoSuggestBox QueryIcon="Find" 
                                            PlaceholderText="Search products..." 
                                            Width="250"
                                            Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted">
                            </AutoSuggestBox>

                            <!-- Category Filter -->
                            <ComboBox PlaceholderText="Category" 
                                      MinWidth="150"
                                      ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate x:DataType="models:Category">
                                        <TextBlock Text="{x:Bind Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Sort -->
                            <ComboBox PlaceholderText="Sort By" 
                                      MinWidth="150"
                                      ItemsSource="{x:Bind ViewModel.SortOptions}"
                                      SelectedItem="{x:Bind ViewModel.SelectedSortOption, Mode=TwoWay}"/>
                        </StackPanel>
                    </AppBarElementContainer>
                    
                    <AppBarButton Icon="Add" Label="Add Product" Command="{x:Bind ViewModel.AddProductCommand}"/>
                    <AppBarButton Icon="Library" Label="Add Category" Click="AddCategory_Click"/>
                    <AppBarButton Icon="OpenFile" Label="Import" Command="{x:Bind ViewModel.ImportProductsCommand}"/>
                </CommandBar.PrimaryCommands>
                
                <CommandBar.SecondaryCommands>
                    <AppBarButton Icon="Refresh" Label="Refresh" Command="{x:Bind ViewModel.LoadProductsCommand}"/>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <!-- Price Filter Row -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Quick ID Search:" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                <NumberBox PlaceholderText="ID No." Width="100" Value="{x:Bind ViewModel.SearchId, Mode=TwoWay, Converter={StaticResource IntToDoubleConverter}}" SpinButtonPlacementMode="Hidden"/>
                
                <AppBarSeparator/>

                <TextBlock Text="Price Range:" VerticalAlignment="Center" Margin="0,0,4,0" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                <NumberBox PlaceholderText="Min" Width="120" Value="{x:Bind ViewModel.MinPrice, Mode=TwoWay, Converter={StaticResource DoubleToNullableDoubleConverter}}" SmallChange="1000"/>
                <TextBlock Text="-" VerticalAlignment="Center"/>
                <NumberBox PlaceholderText="Max" Width="120" Value="{x:Bind ViewModel.MaxPrice, Mode=TwoWay, Converter={StaticResource DoubleToNullableDoubleConverter}}" SmallChange="1000"/>
                <Button Content="Apply" Command="{x:Bind ViewModel.LoadProductsCommand}" Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="Clear" Click="ClearPrice_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Product List -->
        <ListView Grid.Row="1" 
                  ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}"
                  SelectionMode="None">
            <ListView.Header>
                <Grid Padding="12" BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ID" FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" Text="Name" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="Category" FontWeight="Bold"/>
                    <TextBlock Grid.Column="3" Text="Price" FontWeight="Bold"/>
                    <TextBlock Grid.Column="4" Text="Stock" FontWeight="Bold"/>
                    <TextBlock Grid.Column="5" Text="Actions" FontWeight="Bold" Margin="0,0,20,0"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ApiProduct">
                    <Grid Padding="0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{x:Bind Id}" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind Sku}" FontSize="12" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="2" Text="{x:Bind Category.Name}" VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="3" Text="{x:Bind SalePrice}" VerticalAlignment="Center" Foreground="{ThemeResource SystemAccentColor}"/>
                        
                        <TextBlock Grid.Column="4" Text="{x:Bind Stock}" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="8">
                            <Button Content="View Detail" Command="{Binding ElementName=RootGrid, Path=DataContext.ViewDetailCommand}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Loading Indicator -->
        <ProgressRing Grid.Row="1" IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Pagination -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,16,0,0">
            <Button Content="Previous" Command="{x:Bind ViewModel.PreviousPageCommand}" IsEnabled="{x:Bind ViewModel.CanGoPrev, Mode=OneWay}"/>
            <TextBlock VerticalAlignment="Center">
                <Run Text="Page "/>
                <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}"/>
                <Run Text=" of "/>
                <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}"/>
            </TextBlock>
            <Button Content="Next" Command="{x:Bind ViewModel.NextPageCommand}" IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Page>
