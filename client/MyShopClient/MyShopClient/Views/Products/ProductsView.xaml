<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyShopClient.Views.Products.ProductsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:MyShopClient.Models"
    xmlns:vm="using:MyShopClient.ViewModels"
    xmlns:helpers="using:MyShopClient.Helpers"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:StockToStatusColorConverter x:Key="StockToStatusColorConverter"/>
        <helpers:StockToStatusStringConverter x:Key="StockToStatusStringConverter"/>
        <helpers:StockToStatusForegroundConverter x:Key="StockToStatusForegroundConverter"/>
        <helpers:DoubleToNullableDoubleConverter x:Key="DoubleToNullableDoubleConverter"/>
        
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <Style x:Key="StatTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
            <Setter Property="CharacterSpacing" Value="50"/>
        </Style>

        <Style x:Key="StatValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid" Padding="32" Background="{ThemeResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Stats -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- 1. Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Product Management" FontSize="22" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}"/>
                <TextBlock Text="Manage your shop catalog, categories and inventory." 
                           Foreground="{ThemeResource TextSecondaryBrush}" 
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <!-- Import -->
                <Button Command="{x:Bind ViewModel.ImportProductsCommand}" CornerRadius="8" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1" Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8E5;" FontFamily="Segoe Fluent Icons" Foreground="{ThemeResource SuccessBrush}" FontSize="14"/>
                        <TextBlock Text="Import Excel" Foreground="{ThemeResource TextPrimaryBrush}" FontWeight="SemiBold" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- New Category -->
                <Button Click="AddCategory_Click" CornerRadius="8" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1" Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8F4;" FontFamily="Segoe Fluent Icons" Foreground="{ThemeResource InfoBrush}" FontSize="14"/>
                        <TextBlock Text="New Category" Foreground="{ThemeResource TextPrimaryBrush}" FontWeight="SemiBold" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Add Product -->
                <Button Command="{x:Bind ViewModel.AddProductCommand}" CornerRadius="8" Background="{ThemeResource PrimaryBrush}" BorderThickness="0" Padding="16,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontFamily="Segoe Fluent Icons" Foreground="White" FontSize="14"/>
                        <TextBlock Text="Add Product" Foreground="White" FontWeight="Bold" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 2. Stats Section -->
        <Grid Grid.Row="1" Margin="0,0,0,12"> 
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Products -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="TOTAL PRODUCTS" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.StatsTotalProducts, Mode=OneWay}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Center" Width="36" Height="36" CornerRadius="8" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <FontIcon Glyph="&#xE7F7;" Foreground="{ThemeResource InfoBrush}" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Total Categories -->
            <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="TOTAL CATEGORIES" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.StatsTotalCategories, Mode=OneWay}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Center" Width="36" Height="36" CornerRadius="8" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <FontIcon Glyph="&#xE81E;" Foreground="#A78BFA" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Low Stock -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="LOW STOCK" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.StatsLowStock, Mode=OneWay}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Center" Width="36" Height="36" CornerRadius="8" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <FontIcon Glyph="&#xE7BA;" Foreground="{ThemeResource WarningBrush}" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Out of Stock -->
            <Border Grid.Column="3" Style="{StaticResource CardBorderStyle}" Margin="0">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="OUT OF STOCK" Style="{StaticResource StatTitleStyle}"/>
                        <TextBlock Text="{x:Bind ViewModel.StatsOutOfStock, Mode=OneWay}" Style="{StaticResource StatValueStyle}"/>
                    </StackPanel>
                    <Border HorizontalAlignment="Right" VerticalAlignment="Center" Width="36" Height="36" CornerRadius="8" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                        <FontIcon Glyph="&#xE711;" Foreground="{ThemeResource DangerBrush}" FontSize="16"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- 3. Main Content Card -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="16" Padding="24" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Filters -->
                    <RowDefinition Height="Auto"/> <!-- List Header -->
                    <RowDefinition Height="*"/>    <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Filter Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,12"> 
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Search -->
                        <ColumnDefinition Width="*"/>    <!-- Spacer -->
                        <ColumnDefinition Width="Auto"/> <!-- Cats -->
                        <ColumnDefinition Width="Auto"/> <!-- Price -->
                        <ColumnDefinition Width="Auto"/> <!-- Sort -->
                    </Grid.ColumnDefinitions>

                    <AutoSuggestBox QueryIcon="Find" 
                                    PlaceholderText="Search products..." 
                                    Width="280"
                                    Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Foreground="{ThemeResource TextPrimaryBrush}"
                                    Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                    VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="2" 
                              PlaceholderText="All Categories" 
                              Width="160" 
                              Margin="12,0"
                              Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Foreground="{ThemeResource TextPrimaryBrush}"
                              ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                              SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center" Margin="0,0,12,0">
                        <NumberBox PlaceholderText="Min" Width="70" Value="{x:Bind ViewModel.MinPrice, Mode=TwoWay, Converter={StaticResource DoubleToNullableDoubleConverter}}" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <TextBlock Text="-" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                        <NumberBox PlaceholderText="Max" Width="70" Value="{x:Bind ViewModel.MaxPrice, Mode=TwoWay, Converter={StaticResource DoubleToNullableDoubleConverter}}" Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <Button Content="Go" Command="{x:Bind ViewModel.LoadProductsCommand}" Style="{StaticResource AccentButtonStyle}" Padding="8,4" MinWidth="0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="Sort:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                        <ComboBox ItemsSource="{x:Bind ViewModel.SortOptions}" 
                                  SelectedItem="{x:Bind ViewModel.SelectedSortOption, Mode=TwoWay}"
                                  Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" Foreground="{ThemeResource TextPrimaryBrush}"
                                  Width="130"/>
                    </StackPanel>
                </Grid>

                <!-- List Header -->
                <Grid Grid.Row="1" Padding="16,6" Background="{ThemeResource AppBackgroundBrush}" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,1,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>  <!-- Checkbox -->
                        <ColumnDefinition Width="3*"/>  <!-- Product Name -->
                        <ColumnDefinition Width="1.5*"/>  <!-- Category -->
                        <ColumnDefinition Width="1.5*"/>  <!-- Price -->
                        <ColumnDefinition Width="1*"/>  <!-- Stock -->
                        <ColumnDefinition Width="1.5*"/> <!-- Status -->
                        <ColumnDefinition Width="Auto"/>   <!-- Actions -->
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox IsEnabled="False" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <TextBlock Grid.Column="1" Text="PRODUCT NAME" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="2" Text="CATEGORY" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="3" Text="PRICE" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="4" Text="STOCK" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="5" Text="STATUS" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="6" Text="ACTIONS" VerticalAlignment="Center" FontSize="11" FontWeight="Bold" Foreground="{ThemeResource TextSecondaryBrush}" Margin="0,0,10,0"/>
                </Grid>

                <!-- Product List -->
                <ListView Grid.Row="2" 
                          ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}"
                          SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:ApiProduct">
                            <Grid Padding="0,12" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox VerticalAlignment="Center"/>

                                <!-- Product Info -->
                                <Grid Grid.Column="1" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Placeholder Image -->
                                    <Border Width="40" Height="40" CornerRadius="6" Background="{ThemeResource AppBackgroundBrush}">
                                        <FontIcon Glyph="&#xE70F;" FontSize="20" Foreground="{ThemeResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                        <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13"/>
                                        <TextBlock Text="{x:Bind Sku}" FontSize="11" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Grid.Column="2" Text="{x:Bind Category.Name}" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="13"/>

                                <TextBlock Grid.Column="3" Text="{x:Bind SalePrice}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13"/>

                                <TextBlock Grid.Column="4" Text="{x:Bind Stock}" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="13"/>

                                <Border Grid.Column="5" 
                                        Background="{x:Bind Stock, Converter={StaticResource StockToStatusColorConverter}}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Padding="8,1" CornerRadius="8">
                                    <TextBlock Text="{x:Bind Stock, Converter={StaticResource StockToStatusStringConverter}}" 
                                               Foreground="{x:Bind Stock, Converter={StaticResource StockToStatusForegroundConverter}}"
                                               FontSize="10" FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Actions -->
                                <StackPanel Grid.Column="6" Orientation="Horizontal" Spacing="6">
                                    <Button Background="Transparent" BorderThickness="0" Padding="4" Command="{Binding ElementName=RootGrid, Path=DataContext.ViewDetailCommand}" CommandParameter="{Binding}">
                                        <FontIcon Glyph="&#xE70F;" FontSize="15" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" Padding="4" Command="{Binding ElementName=RootGrid, Path=DataContext.DeleteProductCommand}" CommandParameter="{Binding}">
                                        <FontIcon Glyph="&#xE74D;" FontSize="15" Foreground="{ThemeResource DangerBrush}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Footer / Pagination -->
                <Grid Grid.Row="3" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                        <TextBlock Text="Showing" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="13"/>
                        <TextBlock Text="10" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13"/>
                        <TextBlock Text="of" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="13"/>
                         <TextBlock Text="{x:Bind ViewModel.TotalItems, Mode=OneWay}" FontWeight="Bold" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13"/>
                        <TextBlock Text="products" Foreground="{ThemeResource TextSecondaryBrush}" FontSize="13"/>
                    </StackPanel>

                    <!-- Pagination Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="4">
                        <Button Command="{x:Bind ViewModel.PreviousPageCommand}" IsEnabled="{x:Bind ViewModel.CanGoPrev, Mode=OneWay}" Width="30" Height="30" Padding="0" CornerRadius="4" Background="Transparent" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                            <FontIcon Glyph="&#xE76B;" FontSize="10" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        </Button>
                        
                        <!-- Dynamic Pages -->
                        <ItemsControl ItemsSource="{x:Bind ViewModel.Pages, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:PageInfo">
                                     <Button Command="{x:Bind Command}" 
                                             Content="{x:Bind Text}"
                                             IsEnabled="{x:Bind IsEnabled}"
                                             Background="{x:Bind Background}"
                                             Foreground="{x:Bind Foreground}"
                                             Width="30" Height="30" Padding="0" CornerRadius="4" 
                                             BorderThickness="{x:Bind BorderThickness}" BorderBrush="{ThemeResource BorderBrush}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Command="{x:Bind ViewModel.NextPageCommand}" IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}" Width="30" Height="30" Padding="0" CornerRadius="4" Background="Transparent" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="1">
                            <FontIcon Glyph="&#xE76C;" FontSize="10" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <!-- Loading -->
                <ProgressRing Grid.Row="2" IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            </Grid>
        </Border>

    </Grid>
</Page>
