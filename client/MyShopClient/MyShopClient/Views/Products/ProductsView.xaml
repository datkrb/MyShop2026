<Page
    x:Class="MyShopClient.Views.Products.ProductsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShopClient.Views.Products"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:MyShopClient.ViewModels"
    xmlns:models="using:MyShopClient.Models"
    xmlns:helpers="using:MyShopClient.Helpers"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundBrush}">

    <Page.Resources>
        <helpers:StringFormatConverter x:Key="StringFormatConverter"/>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:BoolToPaginationBrushConverter x:Key="BoolToPaginationBrushConverter"/>
    </Page.Resources>

    <Grid Padding="24,12,2,12">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!-- Large: 4 columns (1 row) -->
                <VisualState x:Name="LargeState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard1.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.Column)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatCard4.(Grid.Column)" Value="3"/>
                        <Setter Target="StatCard4.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard4.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="FilterCategory.(Grid.Column)" Value="1"/>
                        <Setter Target="FilterCategory.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterCategory.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="FilterPrice.(Grid.Column)" Value="2"/>
                        <Setter Target="FilterPrice.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterPrice.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="FilterSort.(Grid.Column)" Value="3"/>
                        <Setter Target="FilterSort.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterSort.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="FiltersGrid.RowSpacing" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Medium: 2 columns, 2 rows -->
                <VisualState x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard1.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="StatCard2.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="1"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="StatCard4.(Grid.Column)" Value="2"/>
                        <Setter Target="StatCard4.(Grid.Row)" Value="1"/>
                        <Setter Target="StatCard4.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="16"/>
                        <Setter Target="FilterSearch.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="FilterCategory.(Grid.Column)" Value="2"/>
                        <Setter Target="FilterCategory.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterCategory.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="FilterPrice.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterPrice.(Grid.Row)" Value="1"/>
                        <Setter Target="FilterPrice.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="FilterSort.(Grid.Column)" Value="2"/>
                        <Setter Target="FilterSort.(Grid.Row)" Value="1"/>
                        <Setter Target="FilterSort.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="FiltersGrid.RowSpacing" Value="12"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!-- Small: 1 column, 4 rows -->
                <VisualState x:Name="SmallState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StatCard1.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.Row)" Value="0"/>
                        <Setter Target="StatCard1.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="StatCard2.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard2.(Grid.Row)" Value="1"/>
                        <Setter Target="StatCard2.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="StatCard3.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard3.(Grid.Row)" Value="2"/>
                        <Setter Target="StatCard3.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="StatCard4.(Grid.Column)" Value="0"/>
                        <Setter Target="StatCard4.(Grid.Row)" Value="3"/>
                        <Setter Target="StatCard4.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="StatsGrid.RowSpacing" Value="16"/>
                        <Setter Target="FilterSearch.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.Row)" Value="0"/>
                        <Setter Target="FilterSearch.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="FilterCategory.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterCategory.(Grid.Row)" Value="1"/>
                        <Setter Target="FilterCategory.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="FilterPrice.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterPrice.(Grid.Row)" Value="2"/>
                        <Setter Target="FilterPrice.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="FilterSort.(Grid.Column)" Value="0"/>
                        <Setter Target="FilterSort.(Grid.Row)" Value="3"/>
                        <Setter Target="FilterSort.(Grid.ColumnSpan)" Value="4"/>
                        <Setter Target="FiltersGrid.RowSpacing" Value="12"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,22,0">
            <StackPanel Spacing="24">
                
                <!-- Page Header -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title Section -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                        <TextBlock 
                            Text="Product Management" 
                            FontFamily="{ThemeResource ContentControlThemeFontFamily}" 
                            FontSize="28" 
                            FontWeight="Bold" 
                            Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <TextBlock 
                            Text="Manage your shop catalog, categories and inventory." 
                            FontSize="14" 
                            Foreground="{ThemeResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Button 
                            Command="{x:Bind ViewModel.ImportExcelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8A5;" FontSize="18" Foreground="#22C55E"/>
                                <TextBlock Text="Import Excel"/>
                            </StackPanel>
                        </Button>
                        <Button 
                            Command="{x:Bind ViewModel.NewCategoryCommand}"
                            Style="{StaticResource SecondaryButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8FD;" FontSize="18" Foreground="#3B82F6"/>
                                <TextBlock Text="New Category"/>
                            </StackPanel>
                        </Button>
                        <Button 
                            Command="{x:Bind ViewModel.AddProductCommand}"
                            Style="{StaticResource AccentButtonStyle}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE710;" FontSize="18"/>
                                <TextBlock Text="Add Product"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Stats Cards -->
                <Grid x:Name="StatsGrid" ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Total Products Card -->
                    <Border x:Name="StatCard1" Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="TOTAL PRODUCTS" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}" 
                                   />
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalProducts, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#E3F2FD" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE7B8;" FontSize="24" Foreground="#3B82F6"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Total Categories Card -->
                    <Border x:Name="StatCard2" Grid.Column="1" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="TOTAL CATEGORIES" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}" 
                                   />
                                <TextBlock 
                                    Text="{x:Bind ViewModel.TotalCategories, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#F3E8FF" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE8FD;" FontSize="24" Foreground="#8B5CF6"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Low Stock Card -->
                    <Border x:Name="StatCard3" Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="LOW STOCK" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}" 
                                   />
                                <TextBlock 
                                    Text="{x:Bind ViewModel.LowStockCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#FEF3C7" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE7BA;" FontSize="24" Foreground="#F59E0B"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Out of Stock Card -->
                    <Border x:Name="StatCard4" Grid.Column="3" Style="{StaticResource CardBorderStyle}">
                        <Grid Padding="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock 
                                    Text="OUT OF STOCK" 
                                    FontSize="11" 
                                    FontWeight="SemiBold" 
                                    Foreground="{ThemeResource TextSecondaryBrush}" 
                                   />
                                <TextBlock 
                                    Text="{x:Bind ViewModel.OutOfStockCount, Mode=OneWay}" 
                                    FontSize="28" 
                                    FontWeight="Bold" 
                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>
                            <Border 
                                Grid.Column="1" 
                                Width="48" 
                                Height="48" 
                                Background="#FEE2E2" 
                                CornerRadius="8">
                                <FontIcon Glyph="&#xE785;" FontSize="24" Foreground="#EF4444"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Products Table Card -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filters Section -->
                        <Grid x:Name="FiltersGrid" Grid.Row="0" Padding="20" BorderBrush="{ThemeResource BorderBrush}" BorderThickness="0,0,0,1" ColumnSpacing="12" RowSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Search Box -->
                            <TextBox
                                x:Name="FilterSearch"
                                Grid.Column="0"
                                PlaceholderText="Search products..." 
                                HorizontalAlignment="Stretch"
                                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Resources>
                                    <SolidColorBrush x:Key="TextControlBackground" Color="{ThemeResource SystemChromeLowColor}"/>
                                </TextBox.Resources>
                            </TextBox>

                            <!-- Category Filter -->
                            <ComboBox
                                x:Name="FilterCategory"
                                Grid.Column="1"
                                PlaceholderText="All Categories" 
                                Width="210"
                                SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                                ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}">
                                <ComboBox.Resources>
                                    <SolidColorBrush x:Key="ComboBoxBackground" Color="{ThemeResource SystemChromeLowColor}"/>
                                </ComboBox.Resources>
                            </ComboBox>

                            <!-- Price Range -->
                            <StackPanel
                                x:Name="FilterPrice"
                                Grid.Column="2"
                                Orientation="Horizontal" 
                                Spacing="8">
                                <TextBox 
                                    PlaceholderText="Min $" 
                                    Width="100"
                                    Text="{x:Bind ViewModel.MinPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="â€”" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBox 
                                    PlaceholderText="Max $" 
                                    Width="100"
                                    Text="{x:Bind ViewModel.MaxPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Sort By -->
                            <StackPanel
                                x:Name="FilterSort"
                                Grid.Column="3"
                                Orientation="Horizontal" 
                                Spacing="8">
                                <TextBlock Text="Sort by:" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <ComboBox 
                                    Width="160"
                                    SelectedIndex="0"
                                    SelectedItem="{x:Bind ViewModel.SelectedSortOption, Mode=TwoWay}">
                                    <ComboBoxItem Content="Newest Added"/>
                                    <ComboBoxItem Content="Price: Low to High"/>
                                    <ComboBoxItem Content="Price: High to Low"/>
                                    <ComboBoxItem Content="Best Selling"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Products List with Header -->
                        <ScrollViewer 
                            Grid.Row="1"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Disabled">
                            <ListView 
                                x:Name="ProductsListView"
                                ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                                SelectionMode="None"
                                IsItemClickEnabled="True"
                                ItemClick="ProductsListView_ItemClick">
                                <ListView.Header>
                                <Grid Background="{ThemeResource SystemChromeLowColor}" Padding="16,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition x:Name="ProductNameColumn" Width="2*"/>
                                        <ColumnDefinition x:Name="CategoryColumn" Width="*"/>
                                        <ColumnDefinition x:Name="PriceColumn" Width="*"/>
                                        <ColumnDefinition x:Name="StockColumn" Width="*"/>
                                        <ColumnDefinition x:Name="StatusColumn" Width="*"/>
                                        <ColumnDefinition x:Name="ActionsColumn" Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="PRODUCT NAME" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="1" Text="CATEGORY" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="2" Text="PRICE" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="3" Text="STOCK" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="4" Text="STATUS" Style="{StaticResource TableHeaderTextStyle}"/>
                                    <TextBlock Grid.Column="5" Text="ACTIONS" Style="{StaticResource TableHeaderTextStyle}" HorizontalAlignment="Center"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="MinHeight" Value="0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:ProductViewModel">
                                    <Grid 
                                        Padding="16,12" 
                                        BorderBrush="{ThemeResource BorderBrush}" 
                                        BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Name & Image -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" Margin="5,0">
                                            <Border 
                                                Width="40" 
                                                Height="40" 
                                                Background="{ThemeResource SystemChromeLowColor}" 
                                                CornerRadius="6">
                                                <Image 
                                                    Source="{x:Bind ImageUrl}" 
                                                    Stretch="UniformToFill"/>
                                            </Border>
                                            <StackPanel VerticalAlignment="Center" Spacing="2">
                                                <TextBlock 
                                                    Text="{x:Bind Name}" 
                                                    FontWeight="SemiBold" 
                                                    Foreground="{ThemeResource TextPrimaryBrush}"/>
                                                <TextBlock 
                                                    Text="{x:Bind Sku}" 
                                                    FontSize="12" 
                                                    Foreground="{ThemeResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Category -->
                                        <TextBlock 
                                            Grid.Column="1" 
                                            Margin="5,0"
                                            Text="{x:Bind Category}" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Price -->
                                        <TextBlock 
                                            Grid.Column="2" 
                                            Margin="5,0"
                                            Text="{x:Bind Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='${0:F2}'}"  
                                            FontWeight="SemiBold" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Stock -->
                                        <TextBlock 
                                            Grid.Column="3" 
                                            Margin="5,0"
                                            Text="{x:Bind Stock}" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextPrimaryBrush}"/>

                                        <!-- Status Badge -->
                                        <Border 
                                            Grid.Column="4" 
                                            Padding="10,4" 
                                            CornerRadius="12" 
                                      
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Background="{x:Bind StatusBackground}">
                                            <TextBlock 
                                                Text="{x:Bind Status}" 
                                                FontSize="12" 
                                                FontWeight="SemiBold" 
                                                Foreground="{x:Bind StatusForeground}"/>
                                        </Border>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="4" HorizontalAlignment="Center" Margin="5,0">
                                            <Button 
                                                Width="32" 
                                                Height="32" 
                                                Padding="0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                ToolTipService.ToolTip="Edit">
                                                <FontIcon Glyph="&#xE70F;" FontSize="16" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                            </Button>
                                            <Button 
                                                Width="32" 
                                                Height="32" 
                                                Padding="0"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                ToolTipService.ToolTip="Delete">
                                                <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#EF4444"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Pagination -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{ThemeResource TextSecondaryBrush}">
                        <Run Text="Showing"/>
                        <Run Text="{x:Bind ViewModel.PageStart, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <Run Text="-"/>
                        <Run Text="{x:Bind ViewModel.PageEnd, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <Run Text="of"/>
                        <Run Text="{x:Bind ViewModel.TotalProductsCount, Mode=OneWay}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        <Run Text="products"/>
                    </TextBlock>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                        <!-- Previous Button -->
                        <Button 
                            Command="{x:Bind ViewModel.PreviousPageCommand}"
                            IsEnabled="{x:Bind ViewModel.CanGoPrevious, Mode=OneWay}"
                            Style="{StaticResource PaginationButtonStyle}">
                            <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                        </Button>
                        
                        <!-- Page Number Buttons -->
                        <ItemsControl x:Name="PageNumbersControl" ItemsSource="{x:Bind ViewModel.PageNumbers, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:PageButtonModel">
                                    <Button 
                                        Content="{x:Bind DisplayText}"
                                        Tag="{x:Bind PageNumber}"
                                        Click="PageButton_Click"
                                        IsEnabled="{x:Bind IsEllipsis, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"
                                        Style="{StaticResource PaginationButtonStyle}"
                                        Background="{x:Bind IsCurrentPage, Converter={StaticResource BoolToPaginationBrushConverter}}"
                                        Foreground="{x:Bind IsCurrentPage, Converter={StaticResource BoolToPaginationBrushConverter}, ConverterParameter=Foreground}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Next Button -->
                        <Button 
                            Command="{x:Bind ViewModel.NextPageCommand}"
                            IsEnabled="{x:Bind ViewModel.CanGoNext, Mode=OneWay}"
                            Style="{StaticResource PaginationButtonStyle}">
                            <FontIcon Glyph="&#xE76C;" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
